<%- include("../partials/user/header2") %>

<style>
  :root {
    --primary: #000;
    --primary-hover: #1a1a1a;
    --success: #10b981;
    --success-hover: #059669;
    --success-light: #d1fae5;
    --light: #f8f9fa;
    --border: #e9ecef;
    --text: #212529;
    --text-muted: #6c757d;
    --shadow-sm: 0 1px 3px rgba(0,0,0,0.05);
    --shadow-md: 0 4px 12px rgba(0,0,0,0.08);
    --shadow-lg: 0 8px 24px rgba(0,0,0,0.12);
    --radius-sm: 8px;
    --radius-md: 12px;
    --radius-lg: 16px;
  }

  body, html {
    height: 100%;
    margin: 0;
    display: flex;
    flex-direction: column;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', sans-serif;
  }

  .content-wrapper {
    flex: 1; 
    display: flex;
    justify-content: center;
    align-items: flex-start;
    padding: 60px 20px;
    background: linear-gradient(135deg, #f5f7fa 0%, #e9ecef 100%);
    min-height: calc(100vh - 200px);
  }

  .return-card {
    background: white;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    padding: 3rem;
    max-width: 650px;
    width: 100%;
    border: 1px solid var(--border);
    animation: slideIn 0.4s ease-out;
    position: relative;
    overflow: hidden;
  }

  .return-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 5px;
    background: linear-gradient(90deg, var(--primary) 0%, #4a4a4a 100%);
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  h2 {
    text-align: center;
    margin-bottom: 2rem;
    color: var(--primary);
    font-weight: 800;
    font-size: 1.75rem;
    letter-spacing: -0.5px;
    position: relative;
    padding-bottom: 1rem;
  }

  h2::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 4px;
    background: var(--primary);
    border-radius: 2px;
  }

  .form-label {
    font-weight: 700;
    color: var(--primary);
    margin-bottom: 0.75rem;
    font-size: 0.95rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .form-label::before {
    content: 'üìã';
    font-size: 1.1rem;
  }

  .form-select,
  .form-control {
    border: 2px solid var(--border);
    border-radius: var(--radius-sm);
    padding: 0.875rem 1.25rem;
    font-size: 0.95rem;
    background-color: #fafbfc;
    color: var(--text);
    transition: all 0.3s ease;
    font-weight: 500;
  }

  .form-select:focus,
  .form-control:focus {
    border-color: var(--primary);
    box-shadow: 0 0 0 4px rgba(0, 0, 0, 0.08);
    outline: none;
    background-color: white;
  }

  .form-select {
    cursor: pointer;
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%23000' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M2 5l6 6 6-6'/%3e%3c/svg%3e");
    background-repeat: no-repeat;
    background-position: right 1rem center;
    background-size: 16px 12px;
  }

  .form-control {
    resize: vertical;
    min-height: 120px;
  }

  .mb-3 {
    margin-bottom: 1.75rem;
  }

  .d-none {
    display: none;
  }

  /* Enhanced Buttons */
  .btn {
    border-radius: var(--radius-sm);
    padding: 1rem 2rem;
    font-weight: 700;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 1rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    text-decoration: none;
    width: 100%;
    margin-top: 1rem;
    position: relative;
    overflow: hidden;
  }

  .btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
  }

  .btn:hover::before {
    width: 300px;
    height: 300px;
  }

  .btn-outline-success {
    background: var(--success);
    color: white;
    box-shadow: var(--shadow-md);
    border: 2px solid var(--success);
  }

  .btn-outline-success:hover {
    background: var(--success-hover);
    border-color: var(--success-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  .btn-outline-success:active {
    transform: translateY(0);
  }

  .btn-outline-success::after {
    content: '‚úì';
    font-size: 1.2rem;
    opacity: 0;
    transition: opacity 0.3s;
  }

  .btn-outline-success:hover::after {
    opacity: 1;
  }

  .btn-outline-dark {
    background: white;
    color: var(--primary);
    border: 2px solid var(--border);
    box-shadow: var(--shadow-sm);
  }

  .btn-outline-dark:hover {
    background: var(--primary);
    color: white;
    border-color: var(--primary);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .btn-outline-dark:active {
    transform: translateY(0);
  }

  .btn-outline-dark::before {
    content: '‚Üê';
    font-size: 1.2rem;
  }

  .w-100 {
    width: 100%;
  }

  .mt-2 {
    margin-top: 0.5rem !important;
  }

  /* Other Reason Section Enhancement */
  #otherReasonDiv {
    animation: fadeIn 0.3s ease-out;
    background: linear-gradient(135deg, #fafbfc 0%, #f8f9fa 100%);
    padding: 1.5rem;
    border-radius: var(--radius-md);
    border: 2px dashed var(--border);
    margin-top: 1rem;
  }

  #otherReasonDiv .form-label::before {
    content: '‚úèÔ∏è';
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Info Box */
  .info-box {
    background: linear-gradient(135deg, var(--success-light) 0%, #e8f5e9 100%);
    border-left: 4px solid var(--success);
    border-radius: var(--radius-sm);
    padding: 1rem 1.25rem;
    margin-bottom: 2rem;
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .info-box-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .info-box-content {
    flex: 1;
  }

  .info-box-title {
    font-weight: 700;
    color: #065f46;
    margin-bottom: 0.25rem;
    font-size: 0.95rem;
  }

  .info-box-text {
    color: #047857;
    font-size: 0.875rem;
    margin: 0;
    line-height: 1.5;
  }

  /* Product Info Badge */
  .product-badge {
    background: linear-gradient(135deg, #fafbfc 0%, #f8f9fa 100%);
    border: 2px solid var(--border);
    border-radius: var(--radius-md);
    padding: 1.25rem;
    margin-bottom: 2rem;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .product-badge-icon {
    width: 50px;
    height: 50px;
    background: var(--primary);
    color: white;
    border-radius: var(--radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .product-badge-name {
    font-weight: 700;
    color: var(--primary);
    font-size: 1.1rem;
    line-height: 1.3;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .content-wrapper {
      padding: 40px 15px;
    }

    .return-card {
      padding: 2rem 1.5rem;
    }

    h2 {
      font-size: 1.5rem;
    }

    .btn {
      padding: 0.875rem 1.5rem;
      font-size: 0.95rem;
    }
  }

  @media (max-width: 480px) {
    .return-card {
      padding: 1.5rem 1rem;
    }

    h2 {
      font-size: 1.25rem;
    }

    .product-badge {
      flex-direction: column;
      text-align: center;
    }
  }
</style>

<div class="content-wrapper">
  <div class="return-card">
    <h2>Return Request</h2>

    <!-- Product Info Badge -->
    <div class="product-badge">
      <div class="product-badge-name"><%= item.product.productName %></div>
    </div>

    <!-- Info Box -->
    <div class="info-box">
      <div class="info-box-icon">‚ÑπÔ∏è</div>
      <div class="info-box-content">
        <div class="info-box-title">Return Policy</div>
        <p class="info-box-text">
          Please select a valid reason for your return. Our team will review your request within 24-48 hours.
        </p>
      </div>
    </div>

    <form id="returnForm" action="/orders/<%= order._id %>/items/<%= item._id %>/return" method="POST">
      <div class="mb-3">
        <label for="reason" class="form-label">Reason for Return</label>
        <select class="form-select" id="reason" name="reason" required>
          <option value="">-- Select a Reason --</option>
          <% reasons.forEach(r => { %>
            <option value="<%= r %>"><%= r %></option>
          <% }) %>
        </select>
      </div>

      <div class="mb-3 d-none" id="otherReasonDiv">
        <label for="otherReason" class="form-label">Additional Details</label>
        <textarea class="form-control" id="otherReason" name="otherReason" rows="3" placeholder="Please provide more details about your return reason..."></textarea>
      </div>

      <button type="submit" class="btn btn-outline-success w-100">Submit Return Request</button>
      <a href="/orders/details/<%= order._id %>" class="btn btn-outline-dark w-100 mt-2">Back to Order</a>
    </form>
  </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  const reasonSelect = document.getElementById('reason');
  const otherDiv = document.getElementById('otherReasonDiv');

  reasonSelect.addEventListener('change', function() {
    if (this.value === 'Other') {
      otherDiv.classList.remove('d-none');
      document.getElementById('otherReason').required = true;
    } else {
      otherDiv.classList.add('d-none');
      document.getElementById('otherReason').required = false;
    }
  });

  document.getElementById('returnForm').addEventListener('submit', async function(e) {
    e.preventDefault();

    const formData = new FormData(this);
    const data = Object.fromEntries(formData.entries());

    try {
      const res = await fetch(this.action, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });

      const result = await res.json();

      if (result.success) {
        Swal.fire({
          toast: true,
          position: 'top-end',
          icon: 'success',
          title: result.message || 'Return request submitted successfully!',
          showConfirmButton: false,
          timer: 2500,
          timerProgressBar: true,
          background: '#f0fff4'
        });

        setTimeout(() => {
          window.location.href = `/orders/details/<%= order._id %>`;
        }, 2500);

      } else {
        Swal.fire({
          toast: true,
          position: 'top-end',
          icon: 'error',
          title: result.message || 'Something went wrong. Please try again.',
          showConfirmButton: false,
          timer: 3000,
          timerProgressBar: true,
          background: '#fff5f5'
        });
      }

    } catch (err) {
      Swal.fire({
        toast: true,
        position: 'top-end',
        icon: 'error',
        title: 'Network error. Please try again.',
        showConfirmButton: false,
        timer: 3000,
        timerProgressBar: true
      });
    }
  });
</script>


