<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Forgot Password</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      font-family: "Nunito Sans", sans-serif;
      background-color: #fff;
      margin: 0;
      padding: 0;
    }

    .forgot-wrapper {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      padding: 40px 20px;
    }

    .forgot-container {
      display: flex;
      flex-wrap: wrap;
      width: 100%;
      max-width: 950px;
      background: #fff;
      box-shadow: 0 8px 25px rgba(0,0,0,0.1);
      border-radius: 12px;
      overflow: hidden;
    }

    .forgot-image {
      flex: 1;
      background: #f8f9fa;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 40px;
    }

    .forgot-image img {
      width: 100%;
      max-width: 400px;
      border-radius: 10px;
    }

    .forgot-form {
      flex: 1;
      padding: 50px 40px;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .forgot-form h3 {
      font-size: 26px;
      font-weight: 700;
      margin-bottom: 15px;
      color: #222;
    }

    .forgot-form p {
      color: #555;
      margin-bottom: 25px;
      font-size: 15px;
    }

    .form-control {
      border: 2px solid #ddd;
      border-radius: 8px;
      padding: 12px;
      font-size: 15px;
      transition: all 0.2s;
    }

    .form-control:focus {
      border-color: #d64541;
      box-shadow: 0 0 5px rgba(214, 69, 65, 0.3);
    }

    .btn-primary {
      background-color: #d64541;
      border: none;
      border-radius: 8px;
      padding: 12px;
      font-weight: 600;
      transition: 0.3s;
    }

    .btn-primary:hover {
      background-color: #b93736;
    }

    .error-message {
      color: red;
      font-size: 0.875rem;
      margin-top: 5px;
    }

    @media (max-width: 768px) {
      .forgot-container {
        flex-direction: column;
      }
      .forgot-form {
        padding: 30px 25px;
      }
      .forgot-image {
        padding: 25px;
      }
    }
  </style>
</head>

<body>
  <section class="forgot-wrapper">
    <div class="forgot-container">
      <div class="forgot-image">
        <img src="/admin-assets/image.png" alt="Forgot password image">
      </div>

      <div class="forgot-form">
        <h3>Forgot Password?</h3>
        <p>Enter your details below</p>

        <form method="POST" action="/forgot-email-valid" onsubmit="return validateLoginForm()">
          <div class="mb-3">
            <input 
              class="form-control <%= message ? 'is-invalid' : '' %>" 
              name="email" 
              placeholder="Enter Email" 
              type="text" 
              id="email"
              value="<%= typeof email !== 'undefined' ? email : '' %>"
            />
            <div class="error-message" id="email-error">
              <% if (message) { %><%= message %><% } %>
            </div>
          </div>

          <div class="mb-3">
            <button type="submit" class="btn btn-primary w-100">Send OTP</button>
          </div>
        </form>

        <p class="text-center mb-0">
          Remembered your password? <a href="/login" class="text-decoration-none fw-bold" style="color:#d64541;">Login</a>
        </p>
      </div>
    </div>
  </section>

  <script>
    function validateLoginForm() {
      const emailInput = document.getElementById('email');
      const emailError = document.getElementById('email-error');
      const emailValue = emailInput.value.trim();

      emailError.textContent = '';
      emailInput.classList.remove('is-invalid');

      if (!emailValue || !emailValue.includes('@')) {
        emailError.textContent = 'Please enter a valid email address.';
        emailInput.classList.add('is-invalid');
        return false;
      }

      return true;
    }
  </script>
</body>
</html>
