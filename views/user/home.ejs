<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>ZNEAKZ</title>

  <!-- Bootstrap & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Anton&family=DM+Serif+Display:ital@0;1&display=swap" rel="stylesheet">

  <style>
    body { background-color: #f3efef; }
    .new-arrivals-heading { font-family: 'Anton', sans-serif; font-size: 2rem; color: #111; border-bottom: 3px solid #ff3b3b; display: inline-block; margin-bottom: 20px; }
    .product-cart-wrap { border: 1px solid #e0e0e0; border-radius: 12px; background-color: #fff; transition: 0.3s; }
    .product-cart-wrap:hover { transform: translateY(-5px); box-shadow: 0 8px 24px rgba(0,0,0,0.12); }
    .product-img img { width: 100%; height: 230px; object-fit: cover; border-radius: 10px; }
    #cartCount {
      font-size: 0.7rem; 
      width: 1.2rem;
      height: 1.2rem;
      padding: 0.2rem;
      top: -5px; 
      right: -10px; 
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .wishlist-icon {
      position: absolute;
      top: 10px;
      right: 12px;
      font-size: 1.3rem;
      color: #5a5859;  
      border-radius: 50%;
      padding: 6px 8px;
      cursor: pointer;
      z-index: 10;
    }
  </style>
</head>

<body>
  <%- include("../partials/user/header") %>

  <!-- Always show carousel and banner -->
  <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner" style="height: 75vh;">
      <div class="carousel-item active">
        <img src="/uploads/products/homepage.jpeg" class="d-block w-100 h-100" style="object-fit: contain;" alt="Banner 1">
      </div>
      <div class="carousel-item">
        <img src="/uploads/products/Homepage_8.jpeg" class="d-block w-100 h-100" style="object-fit: contain;" alt="Banner 2">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon"></span>
    </button>
  </div>

  <div>
    <img src="/uploads/products/homepage_6.jpeg" alt="Second Banner" class="img-fluid w-100 h-100" style="object-fit: contain;">
  </div>

  <!-- Product Section -->
  <div class="container-fluid px-0">
    <div class="d-flex flex-wrap">
      <!-- Sidebar Filter -->
      <div class="col-md-2 bg-light p-3">
        <form method="GET" action="/#productSection">
          <h5 class="fw-bold mb-3" style="color: #111;">Filter</h5>
          <label class="form-label">Category</label>
          <select class="form-select mb-3" name="category">
            <option value="">All</option>
            <% categories.forEach(cat=> { %>
              <option value="<%= cat.name %>" <%=selectedCategory.includes(cat.name) ? 'selected' : '' %>>
                <%= cat.name %>
              </option>
            <% }) %>
          </select>

          <label class="form-label">Price Range</label>
          <select class="form-select mb-3" name="priceRange">
            <option value="">All</option>
            <option value="0-2000" <%=priceRange==="0-2000" ? "selected" : "" %>>Below ₹2000</option>
            <option value="2000-5000" <%=priceRange==="2000-5000" ? "selected" : "" %>>₹2000 – ₹5000</option>
            <option value="5000-100000" <%=priceRange==="5000-100000" ? "selected" : "" %>>Above ₹5000</option>
          </select>

          <button type="submit" class="btn btn-dark w-100">Apply Filter</button>
        </form>
      </div>

      <!-- Products Area -->
      <div id="productSection" class="flex-grow-1 overflow-auto">
        <div class="container py-4">
          <h2 class="new-arrivals-heading">New Arrivals</h2>

          <div class="row g-4">
            <% if (products && products.length > 0) { %>
              <% products.forEach(product => { %>
                <div class="col-md-3 col-sm-6">
                  <div class="product-cart-wrap text-center p-2 position-relative">

                    <!-- Wishlist Icon -->
                    <i 
                      class="bi wishlist-icon 
                      <% if (user && Array.isArray(user.wishlist) && user.wishlist.some(id => id.toString() === product._id.toString())) { %>
                        bi-heart-fill text-danger
                      <% } else { %>
                        bi-heart
                      <% } %>
                      title="<%= (user && Array.isArray(user.wishlist) && user.wishlist.some(id => id.toString() === product._id.toString())) 
                        ? 'Remove from Wishlist' 
                        : 'Add to Wishlist' %>"
                      data-id="<%= product._id %>">
                    </i>

                    <div class="product-img">
                      <a href="/product-details?id=<%= product._id %>">
                        <img src="/uploads/products/<%= product.productImage[0] %>" alt="<%= product.productName %>">
                      </a>
                    </div>

                    <h6 class="mt-2"><%= product.productName %></h6>
                    <h5>
                      <% if (product.discountPrice && product.discountPrice < product.price) { %>
                        <span class="text-muted text-decoration-line-through">₹<%= product.price %></span>
                        <span class="text-danger fw-bold ms-1">₹<%= product.discountPrice %></span>
                      <% } else { %>
                        <span class="fw-bold">₹<%= product.price %></span>
                      <% } %>
                    </h5>
                  </div>
                </div>
              <% }) %>
            <% } else { %>
              <div class="col-12 text-center py-5">
                <p>No products found.</p>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-center my-5 w-100">
    <% if (totalPages && totalPages > 1) { %>
      <nav aria-label="Page navigation">
        <ul class="pagination mb-0">
          <% if (currentPage > 1) { %>
            <li class="page-item">
              <a class="page-link"
                href="?page=<%= currentPage - 1 %><% if (query) { %>&q=<%= query %><% } %><% if (sort) { %>&sort=<%= sort %><% } %><% if (selectedCategory) { %>&category=<%= selectedCategory %><% } %><% if (priceRange) { %>&priceRange=<%= priceRange %><% } %>#productSection">
                Previous
              </a>
            </li>
          <% } %>

          <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
              <a class="page-link"
                href="?page=<%= i %><% if (query) { %>&q=<%= query %><% } %><% if (sort) { %>&sort=<%= sort %><% } %><% if (selectedCategory) { %>&category=<%= selectedCategory %><% } %><% if (priceRange) { %>&priceRange=<%= priceRange %><% } %>#productSection">
                <%= i %>
              </a>
            </li>
          <% } %>

          <% if (currentPage < totalPages) { %>
            <li class="page-item">
              <a class="page-link"
                href="?page=<%= currentPage + 1 %><% if (query) { %>&q=<%= query %><% } %><% if (sort) { %>&sort=<%= sort %><% } %><% if (selectedCategory) { %>&category=<%= selectedCategory %><% } %><% if (priceRange) { %>&priceRange=<%= priceRange %><% } %>#productSection">
                Next
              </a>
            </li>
          <% } %>
        </ul>
      </nav>
    <% } %>
  </div>

  <%- include("../partials/user/footer") %>
 
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
document.querySelectorAll('.wishlist-icon').forEach(icon => {
  icon.addEventListener('click', async function () {
    const productId = this.getAttribute('data-id');
    const isFilled = this.classList.contains('bi-heart-fill');

    try {
      let response;
      if (isFilled) {
        response = await fetch(`/wishlist/remove/${productId}`, {
          method: 'DELETE',
          credentials: 'include',
          headers: { 'Content-Type': 'application/json' }
        });
      } else {
        response = await fetch(`/wishlist/add/${productId}`, {
          method: 'POST',
          credentials: 'include',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ productId })
        });
      }

      const result = await response.json();

      if (result.success) {
        this.classList.toggle('bi-heart');
        this.classList.toggle('bi-heart-fill');
        this.classList.toggle('text-danger');

        const newTitle = isFilled ? 'Add to Wishlist' : 'Remove from Wishlist';
        this.setAttribute('title', newTitle);

        showToast(result.message, 'success');
      } else {
        showToast(result.message || 'Action failed.', 'danger');
      }
    } catch (err) {
      console.error('Wishlist error:', err);
      showToast('Network error. Please try again.', 'danger');
    }
  });
});

function showToast(message, type = 'success') {
  const toast = document.createElement('div');
  toast.className = `toast align-items-center text-white bg-${type} border-0 position-fixed`;
  toast.style.top = '20px';
  toast.style.right = '20px';
  toast.style.zIndex = '1055';
  toast.innerHTML = `
    <div class="d-flex">
      <div class="toast-body">${message}</div>
      <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
    </div>
  `;

  document.body.appendChild(toast);
  const bsToast = new bootstrap.Toast(toast, { delay: 3000 });
  bsToast.show();


  toast.addEventListener('hidden.bs.toast', () => toast.remove());
}
</script>

</body>
</html>