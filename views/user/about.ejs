            border: 1px solid #222;
            margin-bottom: 80px;
            position: relative;
            overflow: hidden;
        }

        .mission-box::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, #ff6432, #3296ff, #ff6432);
            background-size: 200% 100%;
