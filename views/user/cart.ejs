<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cart - ZNEAKZ</title>
  <style>
    body { font-family: Arial, sans-serif; background-color: #f5f5f5; }
    header { background-color: #fff; padding: 15px 50px; display: flex; justify-content: space-between; align-items: center; border-bottom: 1px solid #e0e0e0; }
    .logo { font-size: 24px; font-weight: bold; letter-spacing: 2px; }
    nav ul { list-style: none; display: flex; gap: 30px; padding-left:0; }
    nav a { text-decoration: none; color: #333; font-size: 14px; }
    .header-right { display: flex; align-items: center; gap: 20px; }
    .breadcrumb { padding: 20px 50px; font-size: 13px; color: #666; }
    .breadcrumb a { color: #666; text-decoration: none; }
    .container { max-width: 1200px; margin: 0 auto; padding: 20px 50px; }
    .cart-table { background-color: #fff; border-radius: 5px; padding: 30px; margin-bottom: 20px; }
    table { width: 100%; border-collapse: collapse; }
    th, td { padding: 15px; text-align: left; border-bottom: 1px solid #f0f0f0; vertical-align: middle; }
    .product-info { display: flex; align-items: center; gap: 15px; }
    .product-img { width: 80px; height: 80px; object-fit: cover; border-radius: 5px; }
    .quantity-input { display: flex; align-items: center; border: 1px solid #e0e0e0; border-radius: 3px; width: 80px; }
    .quantity-input input { width: 40px; border: none; text-align: center; padding: 8px 0; font-size: 14px; }
    .quantity-input button { background: transparent; border: none; padding: 8px 10px; cursor: pointer; font-size: 14px; }
    .quantity-input button:hover { background-color: #f5f5f5; }
  </style>
</head>
<body>

<header>
  <div class="logo">ZNEAKZ</div>
  <nav>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="#">Contact</a></li>
      <li><a href="#">About</a></li>
    </ul>
  </nav>
  <div class="header-right">
    <div class="icons">
      <div class="icon-btn">‚ù§Ô∏è</div>
      <div class="icon-btn">üë§</div>
      <div class="icon-btn">
</div>

    </div>
  </div>
</header>

<div class="breadcrumb">
  <a href="/">Home</a> / <span>Cart</span>
</div>

<div class="container">
  <div class="cart-table">
    <table>
      <thead>
        <tr>
          <th>Product</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% if(cart && cart.items && cart.items.length > 0){ %>
          <% cart.items.forEach(item => { %>
            <tr>
              <td class="product-info">
                <img src="/uploads/products/<%= item.product.productImage[0] %>" class="product-img" alt="">
                <div><strong><%= item.product.productName %></strong></div>
              </td>
              <td>‚Çπ<%= item.product.discountPrice || item.product.price %></td>
              <td>
                <% if(item.product.stock === 0){ %>
                  <span class="badge bg-danger">Out of Stock</span>
                <% } else { %>
                  <div class="quantity-input">
                    <input type="text" value="<%= item.quantity %>" readonly>
                  </div>
                <% } %>
              </td>
              <td>‚Çπ<%= (item.product.discountPrice || item.product.price) * item.quantity %></td>
              <td>
<button class="btn btn-sm btn-outline-danger remove-btn" 
        data-id="<%= item.product._id %>" 
        data-size="<%= item.size %>">
  <i class="fa fa-trash"></i>
</button>


              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="5" class="text-center">Your cart is empty</td>
          </tr>
        <% } %>
      </tbody>
    </table>
<% if (cart && cart.items && cart.items.length > 0) { %>
  <div class="d-flex justify-content-between align-items-center mt-4 px-2">
    <h5 class="mb-0">
      Total Amount: 
      <span class="text-success fw-bold">‚Çπ<%= cart.total %></span>
    </h5>
    <form action="/checkout" method="GET">
      <button type="submit" class="btn btn-danger px-4 py-2">
        Proceed to Buy Now
      </button>
    </form>
  </div>
<% } %>



  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
document.addEventListener("DOMContentLoaded", () => {
  const tbody = document.querySelector(".cart-table tbody");

  tbody.addEventListener("click", async (e) => {
    const btn = e.target.closest(".remove-btn");
    if(!btn) return;

    const productId = btn.dataset.id;
    const size = btn.dataset.size;

    try {
      const res = await fetch("/cart/remove", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ productId, size })
      });

      const data = await res.json();
      if(data.success){
        Swal.fire({
          icon: "success",
          title: "Removed",
          text: data.message,
          timer: 1200,
          toast: true,
          position: "top-end",
          showConfirmButton: false
        });
        btn.closest("tr").remove();
        const cartCountBadge = document.getElementById("cartCount");
        if(cartCountBadge) cartCountBadge.textContent = data.cartCount;
      } else {
        Swal.fire({
          icon: "error",
          title: "Error",
          text: data.message || "Failed to remove",
          timer: 1500,
          toast: true,
          position: "top-end",
          showConfirmButton: false
        });
      }
    } catch(err){
      console.error(err);
    }
  });
});
</script>

<%- include("../partials/user/footer") %>
</body>
</html>
