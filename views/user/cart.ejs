<%- include("../partials/user/header2") %>

<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cart - ZNEAKZ</title>
  <style>
    body { font-family: Arial, sans-serif; background-color: #f5f5f5; }
    .breadcrumb { padding: 20px 50px; font-size: 13px; color: #666; }
    .breadcrumb a { color: #666; text-decoration: none; }
    .container { max-width: 1200px; margin: 0 auto; padding: 20px 50px; }
    .cart-table { background-color: #fff; border-radius: 5px; padding: 30px; margin-bottom: 20px; }
    table { width: 100%; border-collapse: collapse; }
    th, td { padding: 15px; text-align: left; border-bottom: 1px solid #f0f0f0; vertical-align: middle; }
    .product-info { display: flex; align-items: center; gap: 15px; }
    .product-img { width: 80px; height: 80px; object-fit: cover; border-radius: 5px; }
    .quantity-input { display: flex; align-items: center; border: 1px solid #e0e0e0; border-radius: 3px; width: 80px; }
    .quantity-input input { width: 40px; border: none; text-align: center; padding: 8px 0; font-size: 14px; }
    .quantity-input button { background: transparent; border: none; padding: 8px 10px; cursor: pointer; font-size: 14px; }
    .quantity-input button:hover { background-color: #f5f5f5; }
  </style>
</head>
<body>

<div class="breadcrumb">
  <a href="/">Home</a> / <span>Cart</span>
</div>

<div class="container">
  <div class="cart-table">
    <table>
      <thead>
        <tr>
          <th>Product</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% if(cart && cart.items && cart.items.length > 0){ %>
          <% cart.items.forEach(item => { %>
            <tr>
              <td class="product-info">
                <img src="/uploads/products/<%= item.product.productImage[0] %>" class="product-img" alt="">
                <div><strong><%= item.product.productName %></strong></div>
              </td>
<td>₹<%= (item.product.discountPrice || item.product.price).toFixed(0) %></td>
<td>
  <% if(item.product.stock === 0){ %>
    <span class="badge bg-danger">Out of Stock</span>
  <% } else { %>
    <div class="quantity-input" data-id="<%= item.product._id %>">
      <button class="decrease-btn">-</button>
      <input type="text" value="<%= item.quantity %>" readonly>
      <button class="increase-btn">+</button>
    </div>
  <% } %>
</td>


<td>₹<%= ((item.product.discountPrice || item.product.price) * item.quantity).toFixed(0) %></td>
              <td>
<button class="btn btn-sm btn-outline-danger remove-btn" 
        data-id="<%= item.product._id %>" 
        data-size="<%= item.size %>">
  <i class="fa fa-trash"></i>
</button>


              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="5" class="text-center">Your cart is empty</td>
          </tr>
        <% } %>
      </tbody>
    </table>
<% if (cart && cart.items && cart.items.length > 0) { %>
  <div class="d-flex justify-content-between align-items-center mt-4 px-2">
    <h5 class="mb-0">
      Total Amount: 
<span class="text-success fw-bold">₹<%= cart.total.toFixed(0) %></span>
    </h5>
    <form action="/checkout" method="GET">
      <button type="submit" class="btn btn-danger px-4 py-2">
        Proceed to Buy Now
      </button>
    </form>
  </div>
<% } %>



  </div>
</div>
<%- include("../partials/user/footer") %>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
document.addEventListener("DOMContentLoaded", () => {
  const tbody = document.querySelector(".cart-table tbody");

  tbody.addEventListener("click", async (e) => {
    const btn = e.target.closest(".remove-btn");
    if (!btn) return;

    const productId = btn.dataset.id;
    const size = btn.dataset.size;

    try {
      const res = await fetch("/cart/remove", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ productId, size })
      });

      const data = await res.json();
      if (data.success) {
        Swal.fire({
          icon: "success",
          title: "Removed",
          text: data.message,
          timer: 1000,
          toast: true,
          position: "top-end",
          showConfirmButton: false
        });

        // ✅ Remove the row
        const row = btn.closest("tr");
        if (row) row.remove();

        let newTotal = 0;
        document.querySelectorAll(".cart-table tbody tr").forEach(tr => {
          const totalCell = tr.querySelector("td:nth-child(4)");
          if (totalCell) {
            const val = parseFloat(totalCell.textContent.replace("₹", "").trim());
            if (!isNaN(val)) newTotal += val;
          }
        });

        const totalDisplay = document.querySelector(".fw-bold");
        if (totalDisplay) {
          totalDisplay.textContent = `₹${newTotal.toFixed(0)}`;
        }

        const cartCountBadge = document.getElementById("cartCount");
        if (cartCountBadge) cartCountBadge.textContent = data.cartCount;

        if (data.cartCount === 0) {
          const totalSection = document.querySelector(".d-flex.justify-content-between");
          if (totalSection) totalSection.remove();

          const tbody = document.querySelector(".cart-table tbody");
          tbody.innerHTML = `
            <tr>
              <td colspan="5" class="text-center text-muted py-4">
                Your cart is empty
              </td>
            </tr>`;
        }

      } else {
        Swal.fire({
          icon: "error",
          title: "Error",
          text: data.message || "Failed to remove",
          timer: 1500,
          toast: true,
          position: "top-end",
          showConfirmButton: false
        });
      }
    } catch (err) {
      console.error(err);
      Swal.fire({
        icon: "error",
        title: "Server Error",
        text: "Something went wrong. Please try again later.",
        toast: true,
        position: "top-end"
      });
    }
  });
});

document.querySelectorAll(".quantity-input").forEach(container => {
  const productId = container.dataset.id;
  const input = container.querySelector("input");

  container.querySelector(".increase-btn").addEventListener("click", async () => {
    try {
      const res = await fetch("/cart/update", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ productId, action: "increase" })
      });
      const data = await res.json();
      if (data.success) {
        input.value = parseInt(input.value) + 1;
        updateCartTotals();
      }
    } catch (err) {
      console.error(err);
    }
  });

  container.querySelector(".decrease-btn").addEventListener("click", async () => {
    try {
      const res = await fetch("/cart/update", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ productId, action: "decrease" })
      });
      const data = await res.json();
      if (data.success) {
        let newQty = parseInt(input.value) - 1;
        if (newQty <= 0) {
          container.closest("tr").remove();
        } else {
          input.value = newQty;
        }
        updateCartTotals();
      }
    } catch (err) {
      console.error(err);
    }
  });
});

// Helper function to update total dynamically
function updateCartTotals() {
  let newTotal = 0;
  document.querySelectorAll(".cart-table tbody tr").forEach(tr => {
    const qtyInput = tr.querySelector(".quantity-input input");
    const priceCell = tr.querySelector("td:nth-child(2)");
    if (qtyInput && priceCell) {
      const qty = parseInt(qtyInput.value);
      const price = parseFloat(priceCell.textContent.replace("₹", "").trim());
      newTotal += qty * price;
      const totalCell = tr.querySelector("td:nth-child(4)");
      if (totalCell) totalCell.textContent = `₹${(qty * price).toFixed(0)}`;
    }
  });
  const totalDisplay = document.querySelector(".fw-bold");
  if (totalDisplay) totalDisplay.textContent = `₹${newTotal.toFixed(2)}`;
}

const handleCartAction = async (productId, action) => {
  try {
    const res = await fetch("/cart/update", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ productId, action })
    });
    const data = await res.json();

    if (data.success) {
      // Update quantity input and total
      const row = document.querySelector(`[data-id="${productId}"]`).closest("tr");
      const input = row.querySelector("input");
      input.value = action === "increase" ? parseInt(input.value) + 1 : parseInt(input.value) - 1;

      // Update total
      document.querySelector(".fw-bold").textContent = `₹${data.total.toFixed(2)}`;
    } else {
      Swal.fire({
        icon: "warning",
        title: data.message,
        toast: true,
        position: "top-end",
        showConfirmButton: false,
        timer: 1500
      });
    }
  } catch (err) {
    console.error(err);
  }
};



</script>



