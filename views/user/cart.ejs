<%- include("../partials/user/header2") %>

<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cart - ZNEAKZ</title>
  <style>
    body { font-family: Arial, sans-serif; background-color: #f5f5f5; }
    .breadcrumb { padding: 20px 50px; font-size: 13px; color: #666; }
    .breadcrumb a { color: #666; text-decoration: none; }
    .container { max-width: 1200px; margin: 0 auto; padding: 20px 50px; }
    .cart-table { background-color: #fff; border-radius: 5px; padding: 30px; margin-bottom: 20px; }
    table { width: 100%; border-collapse: collapse; }
    th, td { padding: 15px; text-align: left; border-bottom: 1px solid #f0f0f0; vertical-align: middle; }
    .product-info { display: flex; align-items: center; gap: 15px; }
    .product-img { width: 80px; height: 80px; object-fit: cover; border-radius: 5px; }
    .quantity-input {
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid #ddd;
  border-radius: 6px;
  overflow: hidden;
  width: 90px;
  height: 36px;
  background: #fff;
}

.quantity-input button {
  background: #f8f8f8;
  border: none;
  width: 30px;
  height: 100%;
  font-size: 16px;
  font-weight: bold;
  cursor: pointer;
  color: #333;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background 0.2s ease;
}

.quantity-input button:hover {
  background: #eaeaea;
}

.quantity-input input {
  width: 35px;
  height: 100%;
  text-align: center;
  border: none;
  font-size: 15px;
  font-weight: 500;
  color: #333;
  outline: none;
  background: transparent;
  margin: 0;
  padding: 0;
}

  </style>
</head>
<body>

<div class="breadcrumb">
  <a href="/">Home</a> / <span>Cart</span>
</div>

<div class="container">
  <div class="cart-table">
    <table>
      <thead>
        <tr>
          <th>Product</th>
          <th>Size</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% if(cart && cart.items && cart.items.length > 0){ %>
          <% cart.items.forEach(item => { %>
            <tr>
              <td class="product-info">
                <img src="/uploads/products/<%= item.product.productImage[0] %>" class="product-img" alt="">
                <div><strong><%= item.product.productName %></strong></div>
              </td>
              <td><%= (item.size) %></td>

<td>₹<%= (item.product.discountPrice || item.product.price).toFixed(0) %></td>

<td>
  <% if(item.product.stock === 0){ %>
    <span class="badge bg-danger">Out of Stock</span>
  <% } else { %>
    <div class="quantity-input" data-id="<%= item.product._id %>">
      <button class="decrease-btn">-</button>
      <input type="text" value="<%= item.quantity %>" readonly>
      <button class="increase-btn">+</button>
    </div>
  <% } %>
</td>


<td>₹<%= ((item.product.discountPrice || item.product.price) * item.quantity).toFixed(0) %></td>
              <td>
<button class="btn btn-sm btn-outline-danger remove-btn" 
        data-id="<%= item.product._id %>" 
        data-size="<%= item.size %>">
  <i class="fa fa-trash"></i>
</button>


              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="5" class="text-center">Your cart is empty</td>
          </tr>
        <% } %>
      </tbody>
    </table>
<% if (cart && cart.items && cart.items.length > 0) { %>
  <div class="d-flex justify-content-between align-items-center mt-4 px-2">
    <h5 class="mb-0">
      Total Amount: 
<span class="text-success fw-bold">₹<%= cart.total.toFixed(0) %></span>
    </h5>
    <form action="/checkout" method="GET">
      <button type="submit" class="btn btn-danger px-4 py-2">
        Proceed to Buy Now
      </button>
    </form>
  </div>
<% } %>



  </div>
</div>
<%- include("../partials/user/footer") %>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
document.addEventListener("DOMContentLoaded", () => {

  // REMOVE ITEM
  document.querySelector(".cart-table tbody").addEventListener("click", async (e) => {
    const btn = e.target.closest(".remove-btn");
    if (!btn) return;

    const productId = btn.dataset.id;
    const size = btn.dataset.size;

    const res = await fetch("/cart/remove", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ productId, size })
    });

    const data = await res.json();

    if (!data.success) {
      Swal.fire("Error", data.message, "error");
      return;
    }

    btn.closest("tr").remove();
    updateCartTotals();
  });

  // QUANTITY BUTTONS
  document.querySelectorAll(".quantity-input").forEach(container => {
    const productId = container.dataset.id;
    const size = container.dataset.size;
    const input = container.querySelector("input");

    // Increase
    container.querySelector(".increase-btn").addEventListener("click", async () => {
      const res = await fetch("/cart/update", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ productId, size, action: "increase" })
      });

      const data = await res.json();
      if (data.success) {
        input.value = Number(input.value) + 1;
        updateRowTotal(container.closest("tr"));
        updateCartTotals();
      }
    });

    // Decrease
    container.querySelector(".decrease-btn").addEventListener("click", async () => {
      if (Number(input.value) <= 1) return;

      const res = await fetch("/cart/update", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ productId, size, action: "decrease" })
      });

      const data = await res.json();
      if (data.success) {
        input.value = Number(input.value) - 1;
        updateRowTotal(container.closest("tr"));
        updateCartTotals();
      }
    });
  });
});

function updateRowTotal(tr) {
  const priceCell = tr.querySelector("td:nth-child(3)");
  const qty = tr.querySelector(".quantity-input input").value;
  const totalCell = tr.querySelector("td:nth-child(5)");

  const price = parseFloat(priceCell.textContent.replace("₹", "").trim());
  totalCell.textContent = `₹${(price * qty).toFixed(0)}`;
}

function updateCartTotals() {
  let newTotal = 0;

  document.querySelectorAll(".cart-table tbody tr").forEach(tr => {
    const totalCell = tr.querySelector("td:nth-child(5)");
    if (totalCell) {
      const value = parseFloat(totalCell.textContent.replace("₹", "").trim());
      if (!isNaN(value)) newTotal += value;
    }
  });

  const totalDisplay = document.querySelector(".fw-bold");
  if (totalDisplay) totalDisplay.textContent = `₹${newTotal.toFixed(0)}`;
}




</script>



