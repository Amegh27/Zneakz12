<%- include("../partials/user/header2") %>

<div class="container py-5">
  <h2 class="text-center fw-bold mb-4">My Wallet</h2>

  <div class="card shadow-sm p-4 mb-4">
    <h4 class="fw-semibold mb-3">Available Balance:</h4>
    <h2 class="text-success fw-bold">₹<%= balance %></h2>
  </div>

  <div class="card shadow-sm p-4">
    <h5 class="fw-semibold mb-3">Transaction History</h5>

    <% if (transactions && transactions.length > 0) { %>
      <table class="table align-middle">
        <thead>
          <tr>
            <th>Date</th>
            <th>Type</th>
            <th>Description</th>
            <th>Amount</th>
          </tr>
        </thead>
        <tbody>
          <% transactions.forEach(tx => { %>
            <tr>
              <td><%= new Date(tx.date).toLocaleString() %></td>
              <td>
                <span class="badge <%= tx.type === 'credit' ? 'bg-success' : 'bg-danger' %>">
                  <%= tx.type === 'credit' ? 'Credit' : 'Debit' %>
                </span>
              </td>
              <td><%= tx.description || '-' %></td>
              <td>
                <%= tx.type === 'credit' ? '+' : '-' %>₹<%= tx.amount.toFixed(2) %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p class="text-muted text-center my-3">No wallet transactions yet.</p>
    <% } %>
  </div>
</div>

<%- include("../partials/user/footer") %>
