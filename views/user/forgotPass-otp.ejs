<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Forgot Password - OTP Verification</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <style>
body, html {
  height: 100%;
  margin: 0;
  font-family: "Nunito Sans", sans-serif;
  background: linear-gradient(135deg, #f7f8fa, #eceff1);
  display: flex;
  justify-content: center;
  align-items: center;
}

.otp-container {
  width: 100%;
  max-width: 420px;
  padding: 35px 30px;
  border-radius: 12px;
  background: #ffffff;
  box-shadow: 0 6px 25px rgba(0, 0, 0, 0.1);
  text-align: center;
  transition: 0.3s ease-in-out;
}

.otp-container:hover {
  transform: translateY(-5px);
}

.heading_s1 h3 {
  font-size: 26px;
  font-weight: 700;
  margin-bottom: 20px;
  color: #333;
}

.form-control {
  border: 2px solid #ddd;
  border-radius: 8px;
  padding: 12px;
  font-size: 16px;
  transition: all 0.2s;
  width: 100%;
  text-align: center;
  font-weight: 600;
  letter-spacing: 1px;
}

.form-control:focus {
  border-color: #007bff;
  box-shadow: 0 0 6px rgba(0, 123, 255, 0.4);
  outline: none;
}

.btn {
  display: block;
  width: 100%;
  padding: 12px;
  font-size: 16px;
  font-weight: 600;
  border-radius: 8px;
  cursor: pointer;
  transition: 0.3s;
  margin-top: 15px;
}

.btn-primary {
  background-color: #d64541;
  color: #fff;
  border: none;
}

.btn-primary:hover {
  background-color: #b93736;
}

.btn.resend-button {
  background-color: #6c757d;
  color: #fff;
  border: none;
  display: none; 
}

.btn.resend-button:hover {
  background-color: #5a6268;
}

.alert-danger {
  margin-top: 15px;
  font-size: 14px;
  padding: 10px;
  border-radius: 6px;
  text-align: center;
  background: #ffe6e6;
  color: #d64541;
  display: none;
}
  </style>
</head>
<body>

  <div class="otp-container">
    <div class="heading_s1">
      <h3>Forgot Password - OTP Verification</h3>
    </div>

    <!-- OTP Form -->
    <form id="otpForm">
      <div class="form-group mb-3">
        <label for="otp" class="fw-semibold">Enter OTP:</label>
        <input type="text" id="otp" name="otp" class="form-control" required maxlength="6" pattern="\d*">
      </div>
      <button type="submit" class="btn btn-primary">Verify OTP</button>
    </form>

    <!-- Timer -->
    <div class="form-group otp-timer-wrapper mt-3">
      OTP expires in <span class="otp-timer fw-bold" id="otpTimer">01:00</span>
    </div>

    <!-- Resend OTP -->
    <div class="form-group">
      <button type="button" class="btn resend-button" id="resendBtn">Resend OTP</button>
    </div>

    <!-- Error Message -->
    <div class="alert alert-danger mt-3" id="errorAlert"></div>

    <div class="text-muted text-center pt-3">
      Already verified? <a href="/login">Login now</a>
    </div>
  </div>

  <script>
    let timer = 60;
    let otpInterval;
    let resendCount = 0;
    const maxResends = 3;

    function startOtpTimer() {
      clearInterval(otpInterval);
      timer = 60;
      const timerElement = document.getElementById('otpTimer');
      const resendBtn = document.getElementById('resendBtn');
      const otpInput = document.getElementById('otp');

      otpInput.disabled = false;
      resendBtn.style.display = "none";
      timerElement.style.color = "#333";

      otpInterval = setInterval(() => {
        const minutes = Math.floor(timer / 60);
        const seconds = timer % 60;
        timerElement.textContent = `${minutes}:${seconds < 10 ? '0' : ''}${seconds}`;
        if (timer-- <= 0) {
          clearInterval(otpInterval);
          timerElement.textContent = 'Expired';
          timerElement.style.color = 'red';
          otpInput.disabled = true;
          if (resendCount < maxResends) {
            resendBtn.style.display = "block";
          }
        }
      }, 1000);
    }

    startOtpTimer();

    $('#otpForm').submit(function(e) {
      e.preventDefault();
      const otpInput = $('#otp').val();

      $.ajax({
        type: 'POST',
        url: '/verify-passForgot-otp',
        data: { otp: otpInput },
        success: function(response) {
          if (response.success) {
            Swal.fire({
              icon: 'success',
              title: 'OTP verified successfully',
              showConfirmButton: false,
              timer: 1500
            }).then(() => { window.location.href = response.redirectUrl; });
          } else {
            $('#errorAlert').text(response.message).show();
          }
        },
        error: function() {
          $('#errorAlert').text('Failed to verify OTP. Please try again').show();
        }
      });
    });

   
    $('#resendBtn').click(function() {
      if (resendCount >= maxResends) {
        Swal.fire({
          icon: 'error',
          title: 'Resend Limit Reached',
          text: 'You have reached the maximum number of OTP resend attempts. Please try again later or contact support.'
        });
        $(this).hide();
        return;
      }

      resendCount++;
      $(this).hide(); 
      startOtpTimer(); 

      $.ajax({
        type: 'POST',
        url: '/resend-forgot-otp',
        success: function(response) {
          if (response.success) {
            Swal.fire({
              icon: 'success',
              title: 'OTP Resent Successfully',
              showConfirmButton: false,
              timer: 1500
            });
          } else {
            Swal.fire({ icon: 'error', title: 'Error', text: response.message });
          }
        },
        error: function() {
          Swal.fire({ icon: 'error', title: 'Error', text: 'Failed to resend OTP. Please try again' });
        }
      });
    });
  </script>

</body>
</html>
