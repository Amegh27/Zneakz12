<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Change Password - Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
  <style>
    body { background-color: #f8f9fa; }
    .login-container { 
      max-width: 500px; 
      margin: 100px auto; 
      padding: 20px; 
    }
    /* Added border and improved card styling */
    .login-card { 
      box-shadow: 0 0 20px rgba(0,0,0,0.1); 
      border-radius: 10px; 
      overflow: hidden;
      border: 1px solid #e0e0e0;
    }
    .btn-primary { background-color: #d64541; border: none; }
    .btn-primary:hover { background-color: #b93736; }
    /* Improved form section styling with padding and border */
    .forgot-form { 
      padding: 40px 35px;
      border-left: 4px solid #d64541;
    }
    .forgot-form h3 {
      margin-bottom: 10px;
      font-weight: 600;
      color: #333;
    }
    .forgot-form > p {
      color: #666;
      margin-bottom: 30px;
      font-size: 0.95rem;
    }
    /* Added border to form inputs */
    .form-control {
      border: 1px solid #ddd;
      border-radius: 6px;
      padding: 10px 12px;
      font-size: 0.95rem;
    }
    .form-control:focus {
      border-color: #d64541;
      box-shadow: 0 0 0 0.2rem rgba(214, 69, 65, 0.15);
    }
    .form-control.is-invalid {
      border-color: #dc3545;
    }
    /* Improved label styling */
    .form-label {
      font-weight: 500;
      color: #333;
      margin-bottom: 8px;
      font-size: 0.95rem;
    }
    .forgot-link { 
      text-align: center; 
      margin-top: 20px;
      padding-top: 20px;
      border-top: 1px solid #e0e0e0;
    }
    .forgot-link a { 
      color: #d64541; 
      text-decoration: none; 
      font-size: 0.9rem;
      font-weight: 500;
    }
    .forgot-link a:hover {
      text-decoration: underline;
    }
    .error-message { 
      color: red; 
      font-size: 0.875rem; 
      margin-top: 5px; 
    }
    @media (max-width: 768px) {
      .login-container { flex-direction: column; }
      .forgot-form { 
        padding: 30px 25px;
        border-left: none;
        border-top: 4px solid #d64541;
      }
      .forgot-image { padding: 25px; }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="login-container">
      <div class="login-card">

        <div class="forgot-form">
          <h3>Change Password</h3>
          <p>Enter your details below</p>

          <form id="changePasswordForm">
            <div class="mb-3">
              <label for="currentPass" class="form-label">Current Password</label>
              <input type="password" class="form-control <%= message ? 'is-invalid' : '' %>" id="currentPass" name="currentPass" >
              <div class="error-message" id="currentPass-error">
                <% if (message) { %><%= message %><% } %>
              </div>
            </div>
            <div class="mb-3">
              <label for="newPass1" class="form-label">New Password</label>
              <input type="password" class="form-control" id="newPass1" name="newPass1">
              <div class="error-message" id="newPass1-error"></div>
            </div>
            <div class="mb-3">
              <label for="newPass2" class="form-label">Confirm New Password</label>
              <input type="password" class="form-control" id="newPass2" name="newPass2" >
              <div class="error-message" id="newPass2-error"></div>
            </div>
            <button type="submit" class="btn btn-primary w-100 mb-3">Save Changes</button>
          </form>

          <div class="forgot-link">
            <a href="/forgot-password">Forgot Password?</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>

const isGoogleUser = <%= googleUser ? 'true' : 'false' %>;

  if (isGoogleUser) {
    Swal.fire({
      icon: 'info',
      title: 'Google Login Detected',
      text: 'You signed in with Google and cannot change your password here.',
      confirmButtonText: 'Go Back',
      confirmButtonColor: '#111'
    }).then(() => {
      window.location.href = '/profile';
    });
  }
  
    // Match passwords on input
    document.getElementById('newPass2').addEventListener('input', function() {
      const newPass1 = document.getElementById('newPass1').value;
      const newPass2 = this.value;
      if (newPass1 && newPass2 && newPass1 !== newPass2) {
        this.setCustomValidity('Passwords do not match');
        document.getElementById('newPass2-error').textContent = 'Passwords do not match';
      } else {
        this.setCustomValidity('');
        document.getElementById('newPass2-error').textContent = '';
      }
    });

    // Form submit with AJAX
    document.getElementById('changePasswordForm').addEventListener('submit', async (e) => {
  e.preventDefault();

  const currentPass = document.getElementById('currentPass').value;
  const newPass1 = document.getElementById('newPass1').value;
  const newPass2 = document.getElementById('newPass2').value;

  const submitBtn = e.target.querySelector('button[type="submit"]');
  submitBtn.disabled = true;
  submitBtn.textContent = 'Saving...';

  try {
    const res = await fetch('/change-password', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({ currentPass, newPass1, newPass2 })
    });

    const json = await res.json();

    if (json.success) {
      Swal.fire('Success', json.message || 'Password changed successfully!', 'success').then(() => {
        window.location.href = '/profile';
      });
    } else {
      Swal.fire('Error', json.message || 'Could not change password', 'error');
    }
  } catch (err) {
    Swal.fire('Error', 'Server error', 'error');
  } finally {
    submitBtn.disabled = false;
    submitBtn.textContent = 'Save Changes';
  }
});

  </script>
<%- include("../partials/user/footer") %>

