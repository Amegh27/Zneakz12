<style>
  :root {
    --danger: #ef4444;
    --danger-hover: #dc2626;
    --danger-light: #fee2e2;
    --warning: #f59e0b;
    --warning-hover: #d97706;
    --warning-light: #fef3c7;
    --primary: #000;
    --primary-hover: #1a1a1a;
    --light: #f8f9fa;
    --border: #e9ecef;
    --text: #212529;
    --text-muted: #6c757d;
    --shadow-sm: 0 1px 3px rgba(0,0,0,0.05);
    --shadow-md: 0 4px 12px rgba(0,0,0,0.08);
    --shadow-lg: 0 8px 24px rgba(0,0,0,0.12);
    --radius-sm: 8px;
    --radius-md: 12px;
    --radius-lg: 16px;
  }

  .payment-failure-container {
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 3rem 1rem;
    background: linear-gradient(135deg, #fff5f5 0%, #fee2e2 100%);
  }

  .failure-card {
    background: white;
    border-radius: var(--radius-lg);
    padding: 3rem 2.5rem;
    max-width: 600px;
    width: 100%;
    box-shadow: var(--shadow-lg);
    border: 1px solid var(--border);
    text-align: center;
    animation: slideUp 0.5s ease-out;
    position: relative;
    overflow: hidden;
  }

  .failure-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 5px;
    background: linear-gradient(90deg, var(--danger) 0%, #dc2626 100%);
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .icon-wrapper {
    width: 120px;
    height: 120px;
    margin: 0 auto 2rem;
    background: linear-gradient(135deg, var(--danger-light) 0%, #fecaca 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    animation: pulse 2s ease-in-out infinite;
    border: 4px solid white;
    box-shadow: var(--shadow-md);
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }

  .icon-wrapper svg {
    width: 60px;
    height: 60px;
    color: var(--danger);
  }

  .failure-title {
    font-size: 2rem;
    font-weight: 800;
    color: var(--danger);
    margin-bottom: 1rem;
    letter-spacing: -0.5px;
  }

  .failure-message {
    font-size: 1.1rem;
    color: var(--text-muted);
    margin-bottom: 2rem;
    line-height: 1.6;
    font-weight: 500;
  }

  .info-box {
    background: linear-gradient(135deg, var(--danger-light) 0%, #fecaca 100%);
    border-left: 4px solid var(--danger);
    border-radius: var(--radius-sm);
    padding: 1.25rem;
    margin-bottom: 2.5rem;
    text-align: left;
  }

  .info-box-title {
    font-weight: 700;
    color: #991b1b;
    margin-bottom: 0.5rem;
    font-size: 0.95rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .info-box-text {
    color: #b91c1c;
    font-size: 0.9rem;
    margin: 0;
    line-height: 1.5;
  }

  .info-box ul {
    margin: 0.75rem 0 0 0;
    padding-left: 1.25rem;
  }

  .info-box li {
    color: #b91c1c;
    font-size: 0.9rem;
    line-height: 1.6;
  }

  .button-group {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .btn {
    border-radius: var(--radius-sm);
    padding: 1rem 2rem;
    font-weight: 700;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 1rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    text-decoration: none;
    position: relative;
    overflow: hidden;
  }

  .btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
  }

  .btn:hover::before {
    width: 300px;
    height: 300px;
  }

  .btn-warning {
    background: var(--warning);
    color: white;
    box-shadow: var(--shadow-md);
    border: 2px solid var(--warning);
  }

  .btn-warning:hover {
    background: var(--warning-hover);
    border-color: var(--warning-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    color: white;
  }

  .btn-warning:active {
    transform: translateY(0);
  }

  .btn-outline-dark {
    background: white;
    color: var(--primary);
    border: 2px solid var(--border);
    box-shadow: var(--shadow-sm);
  }

  .btn-outline-dark:hover {
    background: var(--primary);
    color: white;
    border-color: var(--primary);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .btn-outline-dark:active {
    transform: translateY(0);
  }

  .help-text {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 2px solid var(--border);
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .help-text a {
    color: var(--danger);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s ease;
  }

  .help-text a:hover {
    color: var(--danger-hover);
    text-decoration: underline;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .payment-failure-container {
      padding: 2rem 1rem;
    }

    .failure-card {
      padding: 2rem 1.5rem;
    }

    .icon-wrapper {
      width: 100px;
      height: 100px;
      margin-bottom: 1.5rem;
    }

    .icon-wrapper svg {
      width: 50px;
      height: 50px;
    }

    .failure-title {
      font-size: 1.75rem;
    }

    .failure-message {
      font-size: 1rem;
    }

    .button-group {
      flex-direction: column;
      gap: 0.75rem;
    }

    .btn {
      width: 100%;
      padding: 0.875rem 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .failure-title {
      font-size: 1.5rem;
    }

    .failure-card {
      padding: 1.5rem 1rem;
    }
  }
</style>

