  .btn-outline-success {
    color: #28a745;
    border: 2px solid #28a745;
    background: white;
  }

  .btn-outline-success:hover {
    background: #28a745;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(40, 167, 69, 0.3);
  }

  .btn-outline-dark {
    color: #1a1a1a;
    border: 2px solid #1a1a1a;
    background: white;
  }
