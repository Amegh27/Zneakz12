<%- include("../partials/user/header2") %>

<head>
  <meta charset="UTF-8">
  <title>My Orders - ZNEAKZ</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .order-card { border-radius: 10px; background: #fff; box-shadow: 0 2px 5px rgba(0,0,0,0.1); margin-bottom: 20px; padding: 20px; }
    .status-step { display: flex; align-items: center; justify-content: space-between; margin-top: 15px; }
    .step { text-align: center; width: 33%; position: relative; }
    .step:before { content: ''; position: absolute; top: 12px; left: 50%; height: 3px; width: 100%; background: #ddd; z-index: 0; transform: translateX(-50%); }
    .step:first-child:before { display: none; }
    .circle { width: 25px; height: 25px; border-radius: 50%; background: #ccc; margin: 0 auto 5px; z-index: 1; }
    .step.active .circle { background: #28a745; }
  </style>
</head>
<body class="bg-light py-4">

<div class="container">
  <h2 class="mb-4 text-center fw-bold">My Orders</h2>

  <% if (orders && orders.length > 0) { %>
    <% orders.forEach(order => { %>
      <div class="order-card">
        <p><strong>Order ID:</strong> <%= order.orderID %></p>
        <p><strong>Status:</strong> <%= order.status %></p>

        <h6>Products:</h6>
        <ul>
          <% order.items.forEach(item => { %>
            <li><%= item.product.productName %></li>
          <% }) %>
        </ul>

        <div class="mt-3">
<a href="/orders/details/<%= order._id %>" class="btn btn-sm btn-outline-primary">View Details</a>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <div class="text-center bg-white p-5 shadow-sm rounded">
      <h5 class="text-muted">You havenâ€™t placed any orders yet.</h5>
      <a href="/" class="btn btn-primary mt-3">Shop Now</a>
    </div>
  <% } %>
</div>

<%- include("../partials/user/footer") %>


