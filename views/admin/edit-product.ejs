<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    const productId = '<%= product._id %>';
    const form = document.getElementById('editProductForm');

    async function deleteSingleImage(imageName, productId) {
        const result = await Swal.fire({
            title: 'Delete Image?',
            text: 'This action cannot be undone.',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, Delete',
            cancelButtonText: 'Cancel',
            confirmButtonColor: '#ef4444',
            cancelButtonColor: '#6c757d',
            reverseButtons: true
        });

        if (!result.isConfirmed) return;

        try {
            const response = await fetch('/admin/deleteImage', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ imageNameToServer: imageName, productIdToServer: productId })
            });

            const data = await response.json();

            if (data.status) {
                await Swal.fire({
                    icon: 'success',
                    title: 'Deleted!',
                    text: 'Image has been removed successfully.',
                    confirmButtonColor: '#000'
                });
                location.reload();
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: data.message || 'Failed to remove image',
                    confirmButtonColor: '#ef4444'
                });
            }
        } catch (err) {
            console.error("Error:", err);
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Failed to delete image. Please try again.',
                confirmButtonColor: '#ef4444'
            });
        }
    }

    // Show preview of newly selected images
    document.getElementById('imageInput').addEventListener('change', function(e) {
        const container = document.getElementById('addedImagesContainer');
        container.innerHTML = '';
        
        Array.from(e.target.files).forEach(file => {
            const reader = new FileReader();
            reader.onload = function(event) {
                const img = document.createElement('img');
                img.src = event.target.result;
                img.className = 'thumbnail';
                container.appendChild(img);
            };
            reader.readAsDataURL(file);
        });
    });
</script>

