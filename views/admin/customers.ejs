<%- include("../partials/admin/header") %>

<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard - Customers</title>
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
  />
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
  />
  <style>
  :root {
    --primary: #000;
    --primary-hover: #1a1a1a;
    --success: #10b981;
    --success-hover: #059669;
    --success-light: #d1fae5;
    --danger: #ef4444;
    --danger-hover: #dc2626;
    --danger-light: #fee2e2;
    --light: #f8f9fa;
    --border: #e9ecef;
    --text: #212529;
    --text-muted: #6c757d;
    --shadow-sm: 0 1px 3px rgba(0,0,0,0.05);
    --shadow-md: 0 4px 12px rgba(0,0,0,0.08);
    --shadow-lg: 0 8px 24px rgba(0,0,0,0.12);
    --radius-sm: 8px;
    --radius-md: 12px;
    --radius-lg: 16px;
  }

  * {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  body {
    background: linear-gradient(135deg, #f5f7fa 0%, #e9ecef 100%);
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', sans-serif;
    min-height: 100vh;
    margin: 0;
  }

  /* ===== Header Section ===== */
  .content-header {
    background: linear-gradient(135deg, var(--primary) 0%, #2d2d2d 100%);
    padding: 2rem 2.5rem;
    border-bottom: 4px solid var(--primary);
    box-shadow: var(--shadow-lg);
    animation: slideDown 0.4s ease-out;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .content-title {
    font-size: 2.5rem;
    font-weight: 800;
    color: #fff;
    display: flex;
    align-items: center;
    gap: 1rem;
    letter-spacing: -1px;
    margin: 0;
  }

  .content-title i {
    font-size: 2.5rem;
    opacity: 0.95;
  }

  /* ===== Search Section ===== */
  .card-header {
    background: white;
    border: none;
    padding: 2rem 2.5rem;
    box-shadow: var(--shadow-md);
    animation: fadeIn 0.4s ease-out 0.1s both;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .input-group {
    max-width: 600px;
    margin: 0 auto;
    border-radius: var(--radius-md);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: all 0.3s ease;
    border: 2px solid var(--border);
  }

  .input-group:focus-within {
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
    border-color: var(--primary);
  }

  .input-group input {
    border: none;
    padding: 1rem 1.25rem;
    font-size: 1rem;
    color: var(--text);
    background: #fafbfc;
    font-weight: 500;
  }

  .input-group input::placeholder {
    color: var(--text-muted);
  }

  .input-group input:focus {
    outline: none;
    box-shadow: none;
    background: white;
  }

  .input-group .btn {
    border-radius: 0;
    background: var(--primary);
    border: none;
    color: white;
    font-weight: 700;
    padding: 1rem 1.5rem;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .input-group .btn:hover {
    background: var(--primary-hover);
    transform: scale(1.05);
  }

  .input-group .btn-secondary {
    background: #e2e8f0;
    color: var(--text);
    margin-left: 0;
  }

  .input-group .btn-secondary:hover {
    background: #cbd5e0;
    color: var(--text);
  }

  /* ===== Table Container ===== */
  .right {
    padding: 2.5rem;
    animation: fadeIn 0.4s ease-out 0.2s both;
  }

  .table-responsive {
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
    background: white;
    border: 1px solid var(--border);
  }

  /* ===== Table Styles ===== */
  .table {
    border-collapse: separate;
    border-spacing: 0;
    background-color: #fff;
    margin-bottom: 0;
  }

  .table thead {
    background: linear-gradient(135deg, var(--primary) 0%, #2d2d2d 100%);
    color: white;
  }

  .table th {
    font-weight: 700;
    text-transform: uppercase;
    padding: 1.25rem 1.5rem;
    vertical-align: middle;
    font-size: 0.875rem;
    letter-spacing: 0.5px;
    border: none;
  }

  .table td {
    padding: 1.25rem 1.5rem;
    vertical-align: middle;
    border-bottom: 1px solid var(--border);
    font-size: 0.95rem;
  }

  .table tbody tr {
    transition: all 0.2s ease;
  }

  .table tbody tr:hover {
    background: linear-gradient(135deg, #fafbfc 0%, #f8f9fa 100%);
    transform: scale(1.01);
  }

  .table tbody tr:last-child td {
    border-bottom: none;
  }

  .table td.fw-bold {
    color: var(--primary);
    font-weight: 700;
    font-size: 1rem;
  }

  .table td.text-start {
    color: var(--text-muted);
    font-weight: 500;
  }

  /* ===== Empty State ===== */
  .text-muted {
    padding: 3rem;
    font-size: 1.1rem;
    color: var(--text-muted) !important;
  }

  /* ===== Status badges ===== */
  .badge {
    padding: 0.5rem 1rem;
    font-size: 0.85rem;
    border-radius: 50px;
    font-weight: 700;
    display: inline-block;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .badge-success {
    background: var(--success-light);
    color: #065f46;
  }

  .badge-danger {
    background: var(--danger-light);
    color: #991b1b;
  }

  /* ===== Action Buttons ===== */
  .btn {
    border-radius: var(--radius-sm);
    padding: 0.625rem 1.25rem;
    font-size: 0.875rem;
    font-weight: 700;
    border: none;
    transition: all 0.2s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
    text-decoration: none;
  }

  .btn-danger {
    background: var(--danger);
    color: white;
    box-shadow: var(--shadow-sm);
  }

  .btn-danger:hover {
    background: var(--danger-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    color: white;
  }

  .btn-danger:active {
    transform: translateY(0);
  }

  .btn-success {
    background: var(--success);
    color: white;
    box-shadow: var(--shadow-sm);
  }

  .btn-success:hover {
    background: var(--success-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    color: white;
  }

  .btn-success:active {
    transform: translateY(0);
  }

  .btn-sm {
    padding: 0.5rem 1rem;
    font-size: 0.8rem;
  }

  /* ===== Pagination ===== */
  .pagination {
    display: flex;
    justify-content: center;
    margin-top: 2.5rem;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .pagination .page-item {
    list-style: none;
  }

  .pagination .page-link {
    border: 2px solid var(--border);
    border-radius: var(--radius-sm);
    width: 45px;
    height: 45px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary);
    font-weight: 700;
    background-color: #fff;
    box-shadow: var(--shadow-sm);
    transition: all 0.2s ease;
    cursor: pointer;
    text-decoration: none;
  }

  .pagination .page-link:hover {
    background: var(--primary);
    color: #fff;
    border-color: var(--primary);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .pagination .active .page-link {
    background: var(--primary);
    color: #fff;
    border-color: var(--primary);
    box-shadow: var(--shadow-md);
  }

  /* ===== Stats Badge ===== */
  .stats-badge {
    background: white;
    border: 2px solid var(--primary);
    color: var(--primary);
    padding: 0.5rem 1rem;
    border-radius: var(--radius-sm);
    font-weight: 700;
    font-size: 0.9rem;
    display: inline-block;
    margin-top: 0.5rem;
  }

  /* ===== Responsive Design ===== */
  @media (max-width: 768px) {
    .content-header {
      padding: 1.5rem 1.25rem;
    }

    .content-title {
      font-size: 2rem;
    }

    .card-header {
      padding: 1.5rem 1.25rem;
    }

    .right {
      padding: 1.5rem 1.25rem;
    }

    .table th,
    .table td {
      font-size: 0.85rem;
      padding: 1rem 0.75rem;
    }

    .input-group {
      max-width: 100%;
      flex-wrap: wrap;
    }

    .input-group .btn-secondary {
      margin-left: 0.5rem;
    }

    .btn-sm {
      padding: 0.5rem 0.875rem;
      font-size: 0.75rem;
    }

    .pagination .page-link {
      width: 40px;
      height: 40px;
    }
  }

  @media (max-width: 480px) {
    .content-title {
      font-size: 1.5rem;
    }

    .content-title i {
      font-size: 2rem;
    }

    .table th,
    .table td {
      font-size: 0.8rem;
      padding: 0.875rem 0.5rem;
    }
  }

  /* ===== SweetAlert2 Custom Styling ===== */
  .swal2-popup {
    border-radius: var(--radius-md) !important;
  }

  .swal2-confirm {
    background: var(--primary) !important;
    border-radius: var(--radius-sm) !important;
  }

  .swal2-cancel {
    border-radius: var(--radius-sm) !important;
  }
</style>

</head>


<body>
  <div class="content-header row">
    <div class="content-title">
      <i class="fa-solid fa-users"></i> Customer Management
    </div>
  </div>

  <header class="card-header text-center">
    <form action="/admin/users" method="get">
      <div class="input-group">
        <input
          type="text"
          class="form-control"
          placeholder="Search by name or email..."
          name="search"
          value="<%= searchQuery %>"
        />
        <button class="btn btn-primary" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>
          <span>Search</span>
        </button>

        <% if (searchQuery && searchQuery.trim() !== '') { %>
          <a href="/admin/users" class="btn btn-secondary">
            <i class="fa-solid fa-xmark"></i>
            <span>Clear</span>
          </a>
        <% } %>
      </div>
    </form>
  </header>

  <div class="right py-4">
    <% if (users && users.length > 0) { %>
      <div class="stats-badge mb-3">
        ðŸ“Š Total Customers: <%= users.length %>
      </div>
    <% } %>

    <div class="table-responsive">
      <table class="table table-hover align-middle text-center shadow-sm bg-white rounded">
        <thead class="table-dark">
          <tr>
            <th><i class="fa-solid fa-user"></i> Name</th>
            <th><i class="fa-solid fa-envelope"></i> Email</th>
            <th><i class="fa-solid fa-gears"></i> Action</th>
          </tr>
        </thead>
        <tbody>
          <% if (users && users.length > 0) { %>
            <% users.forEach(user => { %>
              <tr>
                <td class="fw-bold text-start"><%= user.name %></td>
                <td class="text-start"><%= user.email %></td>
                <td>
                  <% if (!user.isBlocked) { %>
                    <button class="btn btn-danger btn-sm" 
                            onclick="handleBlockUnblock('/admin/blockCustomer?id=<%= user._id %>', 'Block')">
                      <i class="fa-solid fa-lock"></i> Block
                    </button>
                  <% } else { %>
                    <button class="btn btn-success btn-sm" 
                            onclick="handleBlockUnblock('/admin/unblockCustomer?id=<%= user._id %>', 'Unblock')">
                      <i class="fa-solid fa-unlock"></i> Unblock
                    </button>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="3" class="text-center text-muted">
                <div style="padding: 2rem;">
                  <i class="fa-solid fa-users" style="font-size: 3rem; opacity: 0.3; margin-bottom: 1rem;"></i>
                  <div style="font-size: 1.1rem; font-weight: 600;">No customers found</div>
                  <div style="font-size: 0.9rem; color: var(--text-muted); margin-top: 0.5rem;">
                    Try adjusting your search criteria
                  </div>
                </div>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <% if (totalPages > 1) { %>
    <div class="container mt-3">
      <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
          <!-- Previous Button -->
          <% if (currentPage > 1) { %>
            <li class="page-item">
              <a class="page-link" href="?page=<%= currentPage - 1 %>&search=<%= searchQuery %>" aria-label="Previous">
                <i class="fa-solid fa-chevron-left"></i>
              </a>
            </li>
          <% } %>

          <!-- First Page -->
          <li class="page-item <%= currentPage === 1 ? 'active' : '' %>">
            <a class="page-link" href="?page=1&search=<%= searchQuery %>">1</a>
          </li>

          <!-- Left Ellipsis -->
          <% if (currentPage > 3) { %>
            <li class="page-item disabled">
              <span class="page-link">...</span>
            </li>
          <% } %>

          <!-- Middle Pages -->
          <% for (let i = Math.max(2, currentPage - 1); i <= Math.min(totalPages - 1, currentPage + 1); i++) { %>
            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
              <a class="page-link" href="?page=<%= i %>&search=<%= searchQuery %>"><%= i %></a>
            </li>
          <% } %>

          <!-- Right Ellipsis -->
          <% if (currentPage < totalPages - 2) { %>
            <li class="page-item disabled">
              <span class="page-link">...</span>
            </li>
          <% } %>

          <!-- Last Page -->
          <% if (totalPages > 1) { %>
            <li class="page-item <%= currentPage === totalPages ? 'active' : '' %>">
              <a class="page-link" href="?page=<%= totalPages %>&search=<%= searchQuery %>"><%= totalPages %></a>
            </li>
          <% } %>

          <!-- Next Button -->
          <% if (currentPage < totalPages) { %>
            <li class="page-item">
              <a class="page-link" href="?page=<%= currentPage + 1 %>&search=<%= searchQuery %>" aria-label="Next">
                <i class="fa-solid fa-chevron-right"></i>
              </a>
            </li>
          <% } %>
        </ul>
      </nav>
    </div>
  <% } %>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
  function handleBlockUnblock(url, action) {
      Swal.fire({
          title: `${action} this customer?`,
          text: action === 'Block' ? 'The customer will no longer be able to access their account.' : 'The customer will be able to access their account again.',
          icon: 'warning',
          showCancelButton: true,
          confirmButtonText: `Yes, ${action}`,
          cancelButtonText: 'Cancel',
          confirmButtonColor: action === 'Block' ? '#ef4444' : '#10b981',
          cancelButtonColor: '#6c757d',
          reverseButtons: true
      }).then((result) => {
          if (result.isConfirmed) {
              window.location.href = url;
          }
      });
  }
  </script>
</body>