<%- include("../partials/admin/header") %>

<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard - Customers</title>
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
  />
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
  />
  <style>
  body {
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    font-family: "Inter", "Segoe UI", sans-serif;
    min-height: 100vh;
  }

  .content-header {
    background: linear-gradient(135deg, #010413 0%, #06000b 100%);
    padding: 30px 40px;
    border-bottom: none;
    box-shadow: 0 8px 24px rgba(102, 126, 234, 0.15);
  }

  .content-title {
    font-size: 28px;
    font-weight: 800;
    color: #fff;
    display: flex;
    align-items: center;
    gap: 12px;
    letter-spacing: -0.5px;
  }

  .content-title i {
    font-size: 32px;
    opacity: 0.95;
  }

  /* Search Bar */
  .card-header {
    background: #fff;
    border: none;
    padding: 24px 40px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
  }

  .input-group {
    max-width: 500px;
    margin: 0 auto;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 16px rgba(102, 126, 234, 0.12);
    transition: all 0.3s ease;
  }

  .input-group:focus-within {
    box-shadow: 0 8px 24px rgba(102, 126, 234, 0.2);
    transform: translateY(-2px);
  }

  .input-group input {
    border: none;
    padding: 14px 18px;
    font-size: 15px;
    color: #2c3e50;
  }

  .input-group input::placeholder {
    color: #a0aec0;
  }

  .input-group input:focus {
    outline: none;
    box-shadow: none;
  }

  .input-group .btn {
    border-radius: 0;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    color: white;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .input-group .btn:hover {
    background: linear-gradient(135deg, #120321 0%, #020617 100%);
    transform: scale(1.05);
  }

  .input-group .btn-secondary {
    background: #e2e8f0;
    color: #2c3e50;
    margin-left: 8px;
  }

  .input-group .btn-secondary:hover {
    background: #cbd5e0;
  }

  /* Table Container */
  .right {
    padding: 30px 40px;
  }

  .table-responsive {
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
  }

  /* Table */
  .table {
    border-collapse: separate;
    border-spacing: 0;
    background-color: #fff;
    margin-bottom: 0;
  }

  .table thead {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
    color: white;
  }

  .table th {
    font-weight: 700;
    text-transform: uppercase;
    padding: 16px 20px;
    vertical-align: middle;
    font-size: 13px;
    letter-spacing: 0.5px;
    border: none;
  }

  .table td {
    padding: 16px 20px;
    vertical-align: middle;
    border-bottom: 1px solid #f0f4f8;
  }

  .table tbody tr {
    transition: all 0.3s ease;
  }

  .table tbody tr:hover {
    background-color: #f8fafc;
    box-shadow: inset 0 0 0 1px rgba(102, 126, 234, 0.1);
  }

  .table tbody tr:last-child td {
    border-bottom: none;
  }

  .table td.fw-bold {
    color: #2c3e50;
    font-weight: 700;
  }

  .table td.text-start {
    color: #475569;
  }

  /* Status badges */
  .badge {
    padding: 8px 14px;
    font-size: 13px;
    border-radius: 20px;
    font-weight: 600;
    display: inline-block;
  }

  .badge-success {
    background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
    color: #155724;
    box-shadow: 0 2px 8px rgba(21, 87, 36, 0.1);
  }

  .badge-danger {
    background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%);
    color: #721c24;
    box-shadow: 0 2px 8px rgba(114, 28, 36, 0.1);
  }

  /* Buttons */
  .btn {
    border-radius: 8px;
    padding: 8px 16px;
    font-size: 14px;
    font-weight: 600;
    border: none;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 6px;
  }

  .btn-danger {
    background: linear-gradient(135deg, #fd3504 0%, #fa0425 100%);
    color: white;
  }

  .btn-danger:hover {
    background: linear-gradient(135deg, #2c181b 0%, #331836 100%);
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(245, 87, 108, 0.3);
  }

  .btn-success {
    background: linear-gradient(135deg, #25c105 0%, #03d522 100%);
    color: white;
  }

  .btn-success:hover {
    background: linear-gradient(135deg, #1ef402 0%, #0dcd03 100%);
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(79, 172, 254, 0.3);
  }

  .btn-sm {
    padding: 6px 12px;
    font-size: 13px;
  }

  /* Pagination */
  .pagination {
    display: flex;
    justify-content: center;
    margin-top: 40px;
    gap: 8px;
    flex-wrap: wrap;
  }

  .pagination .page-item {
    list-style: none;
  }

  .pagination .page-link {
    border: none;
    border-radius: 8px;
    width: 42px;
    height: 42px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #667eea;
    font-weight: 600;
    background-color: #fff;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .pagination .page-link:hover {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: #fff;
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(102, 126, 234, 0.3);
  }

  .pagination .active .page-link {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: #fff;
    box-shadow: 0 6px 16px rgba(102, 126, 234, 0.3);
  }

  @media (max-width: 768px) {
    .content-header {
      padding: 20px 20px;
    }

    .content-title {
      font-size: 22px;
    }

    .card-header {
      padding: 16px 20px;
    }

    .right {
      padding: 20px;
    }

    .table th,
    .table td {
      font-size: 13px;
      padding: 12px 10px;
    }

    .input-group {
      max-width: 100%;
    }

    .btn-sm {
      padding: 5px 10px;
      font-size: 12px;
    }
  }
</style>

</head>


<body>
  <div class="content-header row">
  <div class="content-title">
    <i class="fa-solid fa-users"></i> Customers
  </div>
</div>

<header class="card-header text-center">
  <form action="/admin/users" method="get">
    <div class="input-group">
      <input
        type="text"
        class="form-control"
        placeholder="Search customers..."
        name="search"
        value="<%= searchQuery %>"
      />
      <button class="btn btn-primary" type="submit">
        <i class="fa-solid fa-magnifying-glass"></i>
      </button>

      <% if (searchQuery && searchQuery.trim() !== '') { %>
        <a href="/admin/users" class="btn btn-secondary ms-2">Clear</a>
      <% } %>
    </div>
  </form>
</header>

<div class="right py-4">
  <div class="table-responsive">
    <table class="table table-hover table-striped align-middle text-center shadow-sm bg-white rounded">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% if (users && users.length > 0) { %>
          <% users.forEach(user => { %>
            <tr>
              <td class="fw-bold text-start"><%= user.name %></td>
              <td class="text-start"><%= user.email %></td>
              <td>
                <% if (!user.isBlocked) { %>
                  <button class="btn btn-danger btn-sm" 
                          onclick="handleBlockUnblock('/admin/blockCustomer?id=<%= user._id %>', 'Block')">
                    <i class="fa-solid fa-lock"></i> Block
                  </button>
                <% } else { %>
                  <button class="btn btn-success btn-sm" 
                          onclick="handleBlockUnblock('/admin/unblockCustomer?id=<%= user._id %>', 'Unblock')">
                    <i class="fa-solid fa-unlock"></i> Unblock
                  </button>
                <% } %>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="3" class="text-center text-muted">No customers found.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<div class="container mt-3">
  <nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
      <% for (let i = 1; i <= totalPages; i++) { %>
        <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
          <a class="page-link" href="?page=<%= i %>"><%= i %></a>
        </li>
      <% } %>
    </ul>
  </nav>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
function handleBlockUnblock(url, action) {
    Swal.fire({
        title: `${action} this customer?`,
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Yes',
        cancelButtonText: 'No',
    }).then((result) => {
        if (result.isConfirmed) {
            window.location.href = url;
        }
    });
}
</script>
