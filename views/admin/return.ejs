<%- include('../partials/admin/header') %>

<style>
  :root {
    --primary: #000;
    --primary-hover: #1a1a1a;
    --success: #10b981;
    --success-hover: #059669;
    --success-light: #d1fae5;
    --danger: #ef4444;
    --danger-hover: #dc2626;
    --danger-light: #fee2e2;
    --warning: #f59e0b;
    --warning-light: #fef3c7;
    --light: #f8f9fa;
    --border: #e9ecef;
    --text: #212529;
    --text-muted: #6c757d;
    --shadow-sm: 0 1px 3px rgba(0,0,0,0.05);
    --shadow-md: 0 4px 12px rgba(0,0,0,0.08);
    --shadow-lg: 0 8px 24px rgba(0,0,0,0.12);
    --radius-sm: 8px;
    --radius-md: 12px;
    --radius-lg: 16px;
  }

  * {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  body {
    background: linear-gradient(135deg, #f5f7fa 0%, #e9ecef 100%);
    color: var(--text);
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', sans-serif;
    min-height: 100vh;
  }

  .container-fluid {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2.5rem 1rem;
  }

  /* ===== Header ===== */
  .page-header {
    margin-bottom: 2.5rem;
  }

  .page-header h2 {
    color: var(--primary);
    font-weight: 800;
    letter-spacing: -1px;
    font-size: 2.5rem;
    position: relative;
    display: inline-block;
    margin: 0;
  }

  .page-header h2::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 60px;
    height: 4px;
    background: var(--primary);
    border-radius: 2px;
  }

  /* ===== Empty State ===== */
  .empty-state {
    background: linear-gradient(135deg, #fff 0%, #f8f9fa 100%);
    border: 2px dashed var(--border);
    border-radius: var(--radius-lg);
    padding: 4rem 2rem;
    text-align: center;
    box-shadow: var(--shadow-md);
    animation: fadeIn 0.4s ease-out;
  }

  .empty-state-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
    opacity: 0.5;
  }

  .empty-state h5 {
    color: var(--primary);
    font-weight: 700;
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }

  .empty-state p {
    color: var(--text-muted);
    margin: 0;
  }

  /* ===== Return Card ===== */
  .return-card {
    background: white;
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    margin-bottom: 2rem;
    overflow: hidden;
    animation: fadeIn 0.4s ease-out;
  }

  .return-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }

  /* ===== Card Header ===== */
  .return-header {
    background: linear-gradient(135deg, var(--primary) 0%, #2d2d2d 100%);
    color: white;
    padding: 1.75rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    border-bottom: 4px solid var(--primary);
  }

  .return-header-info {
    flex: 1;
  }

  .order-id {
    font-size: 1.25rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
    letter-spacing: 0.5px;
  }

  .customer-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.95rem;
    opacity: 0.95;
  }

  .customer-info .divider {
    opacity: 0.5;
  }

  .order-date {
    font-size: 0.9rem;
    opacity: 0.9;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  /* ===== Table Styles ===== */
  .return-table-wrapper {
    overflow-x: auto;
  }

  .return-table {
    width: 100%;
    border-collapse: collapse;
  }

  .return-table thead {
    background: linear-gradient(135deg, #fafbfc 0%, #f8f9fa 100%);
  }

  .return-table th {
    padding: 1.25rem 1.5rem;
    text-align: left;
    font-weight: 700;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: var(--primary);
    border-bottom: 2px solid var(--border);
    white-space: nowrap;
  }

  .return-table td {
    padding: 1.25rem 1.5rem;
    border-bottom: 1px solid var(--border);
    vertical-align: middle;
    font-size: 0.95rem;
  }

  .return-table tbody tr {
    transition: all 0.2s ease;
  }

  .return-table tbody tr:hover {
    background: linear-gradient(135deg, #fafbfc 0%, #f8f9fa 100%);
    transform: scale(1.01);
  }

  .return-table tbody tr:last-child td {
    border-bottom: none;
  }

  /* ===== Product Cell ===== */
  .product-cell {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .product-image {
    width: 60px;
    height: 60px;
    border-radius: var(--radius-sm);
    object-fit: cover;
    border: 2px solid var(--border);
    box-shadow: var(--shadow-sm);
    transition: all 0.2s ease;
  }

  .product-image:hover {
    transform: scale(1.1);
    box-shadow: var(--shadow-md);
  }

  .product-name {
    font-weight: 600;
    color: var(--primary);
    max-width: 250px;
    line-height: 1.4;
  }

  /* ===== Badge Styles ===== */
  .badge {
    padding: 0.5rem 1rem;
    border-radius: 50px;
    font-weight: 700;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    white-space: nowrap;
  }

  .badge::before {
    content: '';
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: currentColor;
    opacity: 0.8;
  }

  .badge-success {
    background: var(--success-light);
    color: #065f46;
  }

  .badge-danger {
    background: var(--danger-light);
    color: #991b1b;
  }

  .badge-warning {
    background: var(--warning-light);
    color: #92400e;
  }

  .badge-quantity {
    background: #e9ecef;
    color: var(--primary);
    padding: 0.375rem 0.75rem;
  }

  .badge-quantity::before {
    display: none;
  }

  /* ===== Price Cell ===== */
  .price-cell {
    color: var(--primary);
    font-weight: 700;
    font-size: 1.05rem;
  }

  /* ===== Reason Cell ===== */
  .reason-cell {
    max-width: 200px;
    color: var(--text-muted);
    line-height: 1.5;
  }

  /* ===== Action Buttons ===== */
  .action-buttons {
    display: flex;
    gap: 0.5rem;
    flex-wrap: nowrap;
  }

  .btn {
    border-radius: var(--radius-sm);
    padding: 0.625rem 1.25rem;
    font-weight: 700;
    border: none;
    cursor: pointer;
    transition: all 0.2s ease;
    font-size: 0.875rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    text-decoration: none;
    white-space: nowrap;
  }

  .btn-success {
    background: var(--success);
    color: white;
    box-shadow: var(--shadow-sm);
  }

  .btn-success:hover {
    background: var(--success-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .btn-danger {
    background: var(--danger);
    color: white;
    box-shadow: var(--shadow-sm);
  }

  .btn-danger:hover {
    background: var(--danger-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .btn:active {
    transform: translateY(0);
  }

  /* ===== No Action State ===== */
  .no-action {
    color: var(--text-muted);
    font-style: italic;
    font-size: 0.9rem;
  }

  /* ===== Stats Badge ===== */
  .stats-badge {
    background: white;
    border: 2px solid var(--primary);
    color: var(--primary);
    padding: 0.5rem 1rem;
    border-radius: var(--radius-sm);
    font-weight: 700;
    font-size: 0.9rem;
    display: inline-block;
    margin-bottom: 1.5rem;
  }

  /* ===== Animations ===== */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .return-card:nth-child(1) { animation-delay: 0.1s; }
  .return-card:nth-child(2) { animation-delay: 0.2s; }
  .return-card:nth-child(3) { animation-delay: 0.3s; }

  /* ===== Responsive Design ===== */
  @media (max-width: 992px) {
    .return-table th,
    .return-table td {
      padding: 1rem;
      font-size: 0.85rem;
    }

    .product-image {
      width: 50px;
      height: 50px;
    }

    .product-name {
      max-width: 150px;
      font-size: 0.9rem;
    }
  }

  @media (max-width: 768px) {
    .container-fluid {
      padding: 1.5rem 1rem;
    }

    .page-header h2 {
      font-size: 2rem;
    }

    .return-header {
      flex-direction: column;
      align-items: flex-start;
      padding: 1.25rem 1.5rem;
    }

    .return-table-wrapper {
      overflow-x: scroll;
    }

    .return-table {
      min-width: 900px;
    }

    .action-buttons {
      flex-direction: column;
      width: 100%;
    }

    .btn {
      width: 100%;
    }
  }

  /* ===== SweetAlert2 Custom Styling ===== */
  .swal2-popup {
    border-radius: var(--radius-md) !important;
  }

  .swal2-confirm {
    background: var(--primary) !important;
    border-radius: var(--radius-sm) !important;
  }

  .swal2-cancel {
    border-radius: var(--radius-sm) !important;
  }
</style>

<div class="container-fluid">
  <!-- Page Header -->
  <div class="page-header">
    <h2>Return Requests</h2>
    <% if (returns && returns.length > 0) { %>
      <div class="stats-badge">
        ðŸ“¦ <%= returns.reduce((sum, order) => sum + order.items.filter(item => item.returnStatus && item.returnStatus !== 'None').length, 0) %> Return Request(s)
      </div>
    <% } %>
  </div>

  <!-- Empty State -->
  <% if (!returns || returns.length === 0) { %>
    <div class="empty-state">
      <div class="empty-state-icon">ðŸ“¦</div>
      <h5>No Return Requests Found</h5>
      <p>All returns have been processed. Check back later for new requests.</p>
    </div>
  <% } else { %>
    
    <!-- Return Cards -->
    <% returns.forEach((order, orderIndex) => { %>
      <div class="return-card">
        <!-- Card Header -->
        <div class="return-header">
          <div class="return-header-info">
            <div class="order-id">
              ðŸ“‹ Order #<%= order.orderID %>
            </div>
            <div class="customer-info">
              <span>ðŸ‘¤ <%= order.user?.name || 'N/A' %></span>
              <span class="divider">â€¢</span>
              <span style="opacity: 0.8;"><%= order.user?.email || 'N/A' %></span>
            </div>
          </div>
          <div class="order-date">
            ðŸ“… <%= new Date(order.createdAt).toLocaleDateString('en-IN', { 
              day: 'numeric', 
              month: 'short', 
              year: 'numeric' 
            }) %>
          </div>
        </div>

        <!-- Table -->
        <div class="return-table-wrapper">
          <table class="return-table">
            <thead>
              <tr>
                <th>Product</th>
                <th>Size</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Return Reason</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% order.items.forEach((item, itemIndex) => { %>
                <% if (item.returnStatus && item.returnStatus !== 'None') { %>
                  <tr>
                    <td>
                      <div class="product-cell">
                        <% if (item.product?.productImage?.length > 0) { %>
                          <img src="/uploads/products/<%= item.product.productImage[0] %>" 
                               alt="<%= item.product?.productName || 'Product' %>" 
                               class="product-image">
                        <% } else { %>
                          <div class="product-image" style="background: var(--border); display: flex; align-items: center; justify-content: center; color: var(--text-muted);">
                            ðŸ“¦
                          </div>
                        <% } %>
                        <span class="product-name"><%= item.product?.productName || 'Product N/A' %></span>
                      </div>
                    </td>

                    <td>
                      <strong><%= item.size || 'â€”' %></strong>
                    </td>

                    <td>
                      <span class="badge badge-quantity"><%= item.quantity %></span>
                    </td>

                    <td>
                      <span class="price-cell">â‚¹<%= item.price.toFixed(2) %></span>
                    </td>

                    <td>
                      <div class="reason-cell">
                        <%= item.returnReason || 'No reason provided' %>
                      </div>
                    </td>

                    <td>
                      <span class="badge 
                        <%= item.returnStatus === 'Approved' ? 'badge-success' 
                        : item.returnStatus === 'Rejected' ? 'badge-danger' 
                        : 'badge-warning' %>">
                        <%= item.returnStatus %>
                      </span>
                    </td>

                    <!-- Actions -->
                    <td>
                      <% if (item.returnStatus === 'Requested') { %>
                        <div class="action-buttons">
                          <button class="btn btn-success approve-return" 
                                  data-orderid="<%= order._id %>" 
                                  data-itemid="<%= item._id %>"
                                  title="Approve Return">
                            âœ“ Approve
                          </button>
                          <button class="btn btn-danger reject-return" 
                                  data-orderid="<%= order._id %>" 
                                  data-itemid="<%= item._id %>"
                                  title="Reject Return">
                            âœ• Reject
                          </button>
                        </div>
                      <% } else { %>
                        <span class="no-action">
                          <%= item.returnStatus === 'Approved' ? 'âœ“ Processed' : 'âœ• Declined' %>
                        </span>
                      <% } %>
                    </td>
                  </tr>
                <% } %>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    <% }) %>

  <% } %>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  // Approve Return Handler
  document.querySelectorAll('.approve-return').forEach(btn => {
    btn.addEventListener('click', async function() {
      const { orderid, itemid } = this.dataset;
      
      const result = await Swal.fire({
        title: 'Approve Return Request?',
        text: 'The customer will be notified and refund will be processed.',
        icon: 'question',
        showCancelButton: true,
        confirmButtonText: 'âœ“ Yes, Approve',
        cancelButtonText: 'Cancel',
        confirmButtonColor: '#10b981',
        cancelButtonColor: '#6c757d',
        reverseButtons: true
      });

      if (!result.isConfirmed) return;

      try {
        // Show loading
        Swal.fire({
          title: 'Processing...',
          text: 'Please wait while we approve the return.',
          allowOutsideClick: false,
          showConfirmButton: false,
          willOpen: () => {
            Swal.showLoading();
          }
        });

        const res = await fetch(`/admin/returns/${orderid}/${itemid}/approve`, { 
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          }
        });
        
        const data = await res.json();
        
        if (data.success) {
          await Swal.fire({
            icon: 'success',
            title: 'Return Approved!',
            text: data.message || 'The return request has been approved successfully.',
            confirmButtonColor: '#10b981'
          });
          location.reload();
        } else {
          Swal.fire({
            icon: 'error',
            title: 'Error',
            text: data.message || 'Failed to approve return request.',
            confirmButtonColor: '#ef4444'
          });
        }
      } catch (error) {
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: 'Failed to process the request. Please try again.',
          confirmButtonColor: '#ef4444'
        });
      }
    });
  });

  // Reject Return Handler
  document.querySelectorAll('.reject-return').forEach(btn => {
    btn.addEventListener('click', async function() {
      const { orderid, itemid } = this.dataset;
      
      const result = await Swal.fire({
        title: 'Reject Return Request?',
        text: 'The customer will be notified about the rejection.',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'âœ• Yes, Reject',
        cancelButtonText: 'Cancel',
        confirmButtonColor: '#ef4444',
        cancelButtonColor: '#6c757d',
        reverseButtons: true
      });

      if (!result.isConfirmed) return;

      try {
        // Show loading
        Swal.fire({
          title: 'Processing...',
          text: 'Please wait while we reject the return.',
          allowOutsideClick: false,
          showConfirmButton: false,
          willOpen: () => {
            Swal.showLoading();
          }
        });

        const res = await fetch(`/admin/returns/${orderid}/${itemid}/reject`, { 
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          }
        });
        
        const data = await res.json();
        
        if (data.success) {
          await Swal.fire({
            icon: 'info',
            title: 'Return Rejected',
            text: data.message || 'The return request has been rejected.',
            confirmButtonColor: '#ef4444'
          });
          location.reload();
        } else {
          Swal.fire({
            icon: 'error',
            title: 'Error',
            text: data.message || 'Failed to reject return request.',
            confirmButtonColor: '#ef4444'
          });
        }
      } catch (error) {
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: 'Failed to process the request. Please try again.',
          confirmButtonColor: '#ef4444'
        });
      }
    });
  });

  window.addEventListener('load', function() {
    window.scrollTo({ top: 0, behavior: 'smooth' });
  });
</script>

