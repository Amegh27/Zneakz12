<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>ZNEAKZ | Admin Login</title>

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet"/>

  <style>
    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: #fff;
      font-family: 'Inter', sans-serif;
      color: #111;
    }

    .login-container {
      width: 100%;
      max-width: 400px;
      padding: 0 20px;
      text-align: center;
    }

    .login-title {
      font-family: 'Playfair Display', serif;
      font-size: 2rem;
      font-weight: 700;
      letter-spacing: 1.5px;
      color: #222;
      margin-bottom: 30px;
    }

    .form-group {
      margin-bottom: 18px;
      position: relative;
    }

    .form-control {
      width: 100%;
      padding: 12px 14px;
      border: 1px solid #ccc;
      border-radius: 8px;
      font-size: 0.95rem;
      outline: none;
      transition: border-color 0.3s ease;
      color: #111;
    }

    .form-control:focus {
      border-color: #000;
      border-width: 1px;
      box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.05);
    }

    .form-control::placeholder {
      color: #aaa;
    }

    .password-toggle {
      position: absolute;
      right: 12px;
      top: 50%;
      transform: translateY(-50%);
      cursor: pointer;
      color: #555;
    }

    .btn-login {
      width: 100%;
      padding: 12px;
      background-color: #000;
      color: #fff;
      font-weight: 600;
      border: none;
      border-radius: 8px;
      font-size: 1rem;
      cursor: pointer;
      transition: opacity 0.3s ease;
      margin-top: 5px;
    }

    .btn-login:hover {
      opacity: 0.85;
    }

    .error-message {
      font-size: 0.85rem;
      color: #d90429;
      text-align: left;
      margin-top: 6px;
    }

    .alert-box {
      display: none;
      background: #ffebee;
      color: #b71c1c;
      padding: 10px 15px;
      border-radius: 8px;
      font-size: 0.9rem;
      margin-top: 15px;
      text-align: center;
    }

    /* Smooth fade animation for alert */
    .fade-in {
      animation: fadeIn 0.3s ease forwards;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-5px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>

<body>
  <div class="login-container">
    <div class="login-title">ZNEAKZ</div>

    <form id="adminLoginForm" novalidate>
      <div class="form-group">
        <input
          type="email"
          class="form-control"
          id="adminEmail"
          name="email"
          placeholder="Email Address"
          required
        />
        <div id="emailError" class="error-message"></div>
      </div>

      <div class="form-group">
        <input
          type="password"
          class="form-control"
          id="adminPassword"
          name="password"
          placeholder="Password"
          required
        />
        <span class="password-toggle" id="togglePassword">üëÅ</span>
        <div id="passwordError" class="error-message"></div>
      </div>

      <button type="submit" class="btn-login">Login</button>

      <!-- Error message placed below button -->
      <div id="alertBox" class="alert-box">Invalid email or password.</div>
    </form>
  </div>

  <script>
    const togglePassword = document.getElementById("togglePassword");
    const passwordField = document.getElementById("adminPassword");

    togglePassword.addEventListener("click", () => {
      const type =
        passwordField.getAttribute("type") === "password" ? "text" : "password";
      passwordField.setAttribute("type", type);
    });

    const form = document.getElementById("adminLoginForm");
    const alertBox = document.getElementById("alertBox");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      const email = document.getElementById("adminEmail");
      const password = document.getElementById("adminPassword");
      const emailError = document.getElementById("emailError");
      const passwordError = document.getElementById("passwordError");

      let valid = true;
      const emailPattern = /^[^ ]+@[^ ]+\.[a-z]{2,3}$/;

      emailError.textContent = "";
      passwordError.textContent = "";
      alertBox.style.display = "none";

      if (!emailPattern.test(email.value)) {
        emailError.textContent = "Enter a valid email address.";
        valid = false;
      }

      if (password.value.length < 8) {
        passwordError.textContent = "Password must be at least 8 characters.";
        valid = false;
      }

      if (!valid) return;

      try {
        const res = await fetch("/admin/login", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            email: email.value,
            password: password.value,
          }),
        });

        if (res.ok) {
          window.location.href = "/admin";
        } else {
          alertBox.style.display = "block";
          alertBox.classList.add("fade-in");
        }
      } catch (err) {
        alertBox.style.display = "block";
        alertBox.classList.add("fade-in");
      }
    });
  </script>
</body>
</html>
