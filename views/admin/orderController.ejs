<%- include('../partials/admin/header') %>

<style>
  :root {
    --primary: #000;
    --primary-hover: #1a1a1a;
    --light: #f8f9fa;
    --border: #e9ecef;
    --text: #212529;
    --text-muted: #6c757d;
    --shadow-sm: 0 1px 3px rgba(0,0,0,0.05);
    --shadow-md: 0 4px 12px rgba(0,0,0,0.08);
    --shadow-lg: 0 8px 24px rgba(0,0,0,0.12);
    --radius-sm: 8px;
    --radius-md: 12px;
    --radius-lg: 16px;
  }

  * {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  body {
    background: linear-gradient(135deg, #f5f7fa 0%, #e9ecef 100%);
    color: var(--text);
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', sans-serif;
    min-height: 100vh;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2.5rem 1rem;
  }

  /* ===== Header ===== */
  h2 {
    color: var(--primary);
    font-weight: 800;
    letter-spacing: -1px;
    margin-bottom: 2.5rem;
    font-size: 2.5rem;
    position: relative;
    display: inline-block;
  }

  h2::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 60px;
    height: 4px;
    background: var(--primary);
    border-radius: 2px;
  }

  /* ===== Search & Filter Form ===== */
  .search-filter-form {
    background: white;
    padding: 2rem;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    margin-bottom: 2.5rem;
    border: 1px solid var(--border);
  }

  .form-control,
  .form-select {
    border: 2px solid var(--border);
    border-radius: var(--radius-sm);
    padding: 0.875rem 1.25rem;
    font-size: 0.95rem;
    background-color: #fafbfc;
    color: var(--text);
    transition: all 0.2s ease;
    font-weight: 500;
  }

  .form-control:focus,
  .form-select:focus {
    border-color: var(--primary);
    box-shadow: 0 0 0 4px rgba(0, 0, 0, 0.08);
    outline: none;
    background-color: white;
  }

  .form-control::placeholder {
    color: var(--text-muted);
    font-weight: 400;
  }

  /* ===== Buttons ===== */
  .btn {
    border-radius: var(--radius-sm);
    padding: 0.875rem 1.75rem;
    font-weight: 700;
    border: none;
    cursor: pointer;
    transition: all 0.2s ease;
    font-size: 0.95rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    text-decoration: none;
  }

  .btn-dark {
    background: var(--primary);
    color: white;
    box-shadow: var(--shadow-sm);
  }

  .btn-dark:hover {
    background: var(--primary-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .btn-dark:active {
    transform: translateY(0);
  }

  .btn-outline-secondary {
    border: 2px solid var(--border);
    color: var(--text);
    background: white;
  }

  .btn-outline-secondary:hover {
    background: var(--primary);
    border-color: var(--primary);
    color: white;
    transform: translateY(-2px);
    box-shadow: var(--shadow-sm);
  }

  .btn-sm {
    padding: 0.625rem 1.25rem;
    font-size: 0.875rem;
  }

  /* ===== Empty State ===== */
  .empty-state {
    background: white;
    padding: 4rem 2rem;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    text-align: center;
    border: 2px dashed var(--border);
  }

  .empty-state h5 {
    color: var(--text-muted);
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0;
  }

  /* ===== Order Cards ===== */
  .order-card {
    background: white;
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    margin-bottom: 2rem;
    overflow: hidden;
    border-left: 5px solid var(--primary);
    transition: all 0.3s ease;
  }

  .order-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
    border-left-width: 6px;
  }

  .card-header {
    background: linear-gradient(135deg, #fafbfc 0%, #f8f9fa 100%);
    padding: 1.5rem;
    border-bottom: 2px solid var(--border);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .card-header-info {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 1rem;
    flex: 1;
  }

  .card-header strong {
    color: var(--primary);
    font-weight: 700;
    font-size: 1rem;
  }

  .card-header small {
    color: var(--text-muted);
    font-size: 0.875rem;
    font-weight: 500;
  }

  .info-divider {
    color: var(--border);
    font-weight: 300;
  }

  .card-body {
    padding: 1.75rem;
  }

  h6 {
    font-weight: 700;
    color: var(--primary);
    margin-top: 0;
    margin-bottom: 1rem;
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  /* ===== Status Badges ===== */
  .badge {
    padding: 0.5rem 1.25rem;
    border-radius: 50px;
    font-weight: 700;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .badge::before {
    content: '';
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: currentColor;
    opacity: 0.7;
  }

  .bg-danger {
    background-color: #fee !important;
    color: #c41e3a !important;
  }

  .bg-success {
    background-color: #d4edda !important;
    color: #155724 !important;
  }

  .bg-primary {
    background-color: #cfe2ff !important;
    color: #084298 !important;
  }

  .bg-warning {
    background-color: #fff3cd !important;
    color: #997404 !important;
  }

  .bg-secondary {
    background-color: #e7f5e7 !important;
    color: #1b5e20 !important;
  }

  /* ===== Product List ===== */
  .list-group {
    border: none;
    display: flex;
    flex-direction: column;
    gap: 0.875rem;
  }

  .list-group-item {
    background: #fafbfc;
    border: 2px solid var(--border);
    border-radius: var(--radius-md);
    padding: 1.25rem;
    transition: all 0.2s ease;
    border-left: 4px solid var(--primary);
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .list-group-item:hover {
    background: white;
    box-shadow: var(--shadow-sm);
    border-color: var(--primary);
  }

  .product-info {
    flex: 1;
    min-width: 250px;
  }

  .product-info strong {
    color: var(--primary);
    font-weight: 700;
    font-size: 1.05rem;
    display: block;
    margin-bottom: 0.5rem;
  }

  .product-details {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 0.5rem;
  }

  .product-details small {
    color: var(--text-muted);
    font-size: 0.875rem;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .product-status {
    margin-top: 0.5rem;
    padding: 0.375rem 0.875rem;
    background: white;
    border: 1px solid var(--border);
    border-radius: 6px;
    display: inline-block;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .product-actions {
    display: flex;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  /* ===== Card Footer ===== */
  .card-footer-custom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1.5rem;
    border-top: 2px solid var(--border);
    margin-top: 1.5rem;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .total-amount {
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--primary);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .total-amount::before {
    content: 'â‚¹';
    font-size: 1.25rem;
    opacity: 0.7;
  }

  /* ===== Pagination ===== */
  .pagination {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    margin-top: 3rem;
    flex-wrap: wrap;
  }

  .page-item {
    list-style: none;
  }

  .page-item .page-link {
    border: 2px solid var(--border);
    border-radius: var(--radius-sm);
    color: var(--primary);
    padding: 0.625rem 1rem;
    transition: all 0.2s ease;
    cursor: pointer;
    font-weight: 600;
    text-decoration: none;
    display: block;
    min-width: 45px;
    text-align: center;
  }

  .page-item .page-link:hover {
    background: var(--primary);
    color: white;
    border-color: var(--primary);
    transform: translateY(-2px);
    box-shadow: var(--shadow-sm);
  }

  .page-item.active .page-link {
    background: var(--primary);
    color: white;
    border-color: var(--primary);
    box-shadow: var(--shadow-sm);
  }

  /* ===== Responsive Design ===== */
  @media (max-width: 768px) {
    .container {
      padding: 1.5rem 1rem;
    }

    h2 {
      font-size: 2rem;
      margin-bottom: 1.5rem;
    }

    .search-filter-form {
      padding: 1.5rem;
    }

    .card-header {
      flex-direction: column;
      align-items: flex-start;
      padding: 1.25rem;
    }

    .card-header-info {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .info-divider {
      display: none;
    }

    .card-body {
      padding: 1.25rem;
    }

    .list-group-item {
      flex-direction: column;
      align-items: flex-start;
    }

    .product-actions {
      width: 100%;
    }

    .product-actions .btn {
      flex: 1;
    }

    .card-footer-custom {
      flex-direction: column;
      align-items: stretch;
    }

    .btn {
      width: 100%;
    }

    .total-amount {
      justify-content: center;
    }
  }

  @media (max-width: 576px) {
    .search-filter-form .d-flex {
      flex-direction: column;
    }

    .search-filter-form .btn {
      width: 100%;
    }
  }

  /* ===== Animations ===== */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .order-card {
    animation: fadeIn 0.4s ease-out;
  }

  .order-card:nth-child(1) { animation-delay: 0.1s; }
  .order-card:nth-child(2) { animation-delay: 0.2s; }
  .order-card:nth-child(3) { animation-delay: 0.3s; }
</style>

<div class="container">
  <h2>Order Management</h2>

  <!-- Search & Filter Form -->
  <form class="search-filter-form row g-3 align-items-end" method="GET" action="/admin/orders">
    <div class="col-md-5">
      <label class="form-label" style="font-weight: 600; color: var(--text); margin-bottom: 0.5rem;">Search Products</label>
      <input 
        type="text" 
        name="q" 
        value="<%= q %>" 
        placeholder="Enter product name..." 
        class="form-control"
      />
    </div>

    <div class="col-md-3">
      <label class="form-label" style="font-weight: 600; color: var(--text); margin-bottom: 0.5rem;">Filter by Status</label>
      <select name="status" class="form-select">
        <option value="">All Status</option>
        <% statuses.forEach(s => { %>
          <option value="<%= s %>" <%= s===status?'selected':'' %>><%= s %></option>
        <% }) %>
      </select>
    </div>

    <div class="col-md-4">
      <div class="d-flex gap-2">
        <button type="submit" class="btn btn-dark flex-fill" style="margin-top: 10px;">
          <span></span> Search
        </button>
        <% if ((q && q.trim() !== "") || (status && status !== "")) { %>
          <a href="/admin/orders" class="btn btn-dark flex-fill" style="margin-top: 10px;">
            <span></span> Clear
          </a>
        <% } %>
      </div>
    </div>
  </form>

  <% if (orders.length === 0) { %>
    <div class="empty-state">
      <h5>ðŸ“¦ No orders found</h5>
      <p style="color: var(--text-muted); margin-top: 0.5rem;">Try adjusting your search filters</p>
    </div>
  <% } else { %>
    <% orders.forEach(order => { %>
      <div class="order-card">
        <!-- Card Header -->
        <div class="card-header">
          <div class="card-header-info">
            <div>
              <strong>Order:</strong> <span style="color: var(--text-muted);">#<%= order.orderID %></span>
            </div>
            <span class="info-divider">|</span>
            <div>
              <small>ðŸ“… <%= new Date(order.createdAt).toLocaleString() %></small>
            </div>
            <span class="info-divider">|</span>
            <div>
              <strong>Customer:</strong> <span style="color: var(--text-muted);"><%= order.user?.name || 'N/A' %></span>
            </div>
          </div>
        </div>

        <!-- Card Body -->
        <div class="card-body">
          <!-- Order Status -->
          <% 
            let displayStatus = order.status;
            if (order.items.some(item => item.status === 'Cancelled') && order.items.some(item => item.status !== 'Cancelled')) {
              displayStatus = 'Partially Cancelled';
            }
          %>
          
          <div style="margin-bottom: 1.5rem;">
            <h6 style="display: inline-block; margin-right: 1rem;">Order Status</h6>
            <span class="badge 
              <%= displayStatus==='Cancelled' ? 'bg-danger' 
              : displayStatus==='Delivered' ? 'bg-success' 
              : displayStatus==='Shipped' ? 'bg-primary' 
              : displayStatus==='Partially Cancelled' ? 'bg-warning' 
              : 'bg-secondary' %>">
              <%= displayStatus %>
            </span>
          </div>

          <!-- Products List -->
          <h6>Products</h6>
          <ul class="list-group">
            <% order.items.forEach(item => { %>
              <li class="list-group-item">
                <div class="product-info">
                  <strong><%= item.product?.productName || 'Product N/A' %></strong>
                  <div class="product-details">
                    <small><strong>Qty:</strong> <%= item.quantity %></small>
                    <small><strong>Price:</strong> â‚¹<%= item.price.toFixed(0) %></small>
                    <small><strong>Size:</strong> <%= item.size %></small>
                  </div>
                  <div class="product-status">
                    <strong>Status:</strong> <%= item.status %>
                    <% if (item.returnStatus && item.returnStatus !== 'None') { %>
                      <span style="color: var(--text-muted);"> â€¢ </span>
                      <strong>Return:</strong> <%= item.returnStatus %>
                    <% } %>
                  </div>
                </div>

                <% if (item.status !== 'Cancelled' && (!item.returnStatus || item.returnStatus === 'None')) { %>
                  <div class="product-actions">
                  </div>
                <% } %>
              </li>
            <% }) %>
          </ul>

          <!-- Card Footer -->
          <div class="card-footer-custom">
            <div class="total-amount">
              <%= order.totalAmount.toFixed(0) %>
            </div>
            <a href="/admin/orders/<%= order._id %>" class="btn btn-dark btn-sm">
              View Full Details â†’
            </a>
          </div>
        </div>
      </div>
    <% }) %>
  <% } %>

  <!-- Pagination -->
  <% if (pages > 1) { %>
    <nav aria-label="Order pages navigation">
      <ul class="pagination">
        <% for (let i=1; i<=pages; i++) { %>
          <li class="page-item <%= i===page ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>&q=<%= q %>&status=<%= status %>"><%= i %></a>
          </li>
        <% } %>
      </ul>
    </nav>
  <% } %>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  // Approve Return Handler
  document.querySelectorAll('.approve-return').forEach(btn => {
    btn.addEventListener('click', async function() {
      const orderId = this.dataset.order;
      const itemId = this.dataset.item;

      try {
        const res = await fetch(`/admin/orders/${orderId}/items/${itemId}/return/approve`, { 
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          }
        });
        const data = await res.json();
        
        if (data.success) {
          await Swal.fire({
            icon: 'success',
            title: 'Return Approved!',
            text: 'The return request has been approved successfully.',
            confirmButtonColor: '#000'
          });
          location.reload();
        } else {
          Swal.fire({
            icon: 'error',
            title: 'Error',
            text: data.message || 'Something went wrong',
            confirmButtonColor: '#000'
          });
        }
      } catch (error) {
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: 'Failed to approve return request',
          confirmButtonColor: '#000'
        });
      }
    });
  });

  // Reject Return Handler
  document.querySelectorAll('.reject-return').forEach(btn => {
    btn.addEventListener('click', async function() {
      const orderId = this.dataset.order;
      const itemId = this.dataset.item;

      try {
        const res = await fetch(`/admin/orders/${orderId}/items/${itemId}/return/reject`, { 
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          }
        });
        const data = await res.json();
        
        if (data.success) {
          await Swal.fire({
            icon: 'success',
            title: 'Return Rejected!',
            text: 'The return request has been rejected.',
            confirmButtonColor: '#000'
          });
          location.reload();
        } else {
          Swal.fire({
            icon: 'error',
            title: 'Error',
            text: data.message || 'Something went wrong',
            confirmButtonColor: '#000'
          });
        }
      } catch (error) {
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: 'Failed to reject return request',
          confirmButtonColor: '#000'
        });
      }
    });
  });
</script>

