<%- include("../partials/admin/header") %>

<head>
    <meta charset="UTF-8">
    <title>Products</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
   
    <!-- SweetAlert2 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
</head>

<body class="bg-light">

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Products</h2>
        <form action="" method="get" class="d-flex" style="max-width: 500px; width: 100%;">
            <input type="text" class="form-control rounded-start-pill" placeholder="Search products or brands"
                name="search">
            <button class="btn btn-primary rounded-end-pill px-4">Search</button>
        </form>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Action</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                <% if (data && data.length > 0) { %>
                    <% for (let i = data.length - 1; i >= 0; i--) { %>
                        <tr class="text-center">
                            <td><%= data[i].productName %></td>
                            <td><%= data[i].category ? data[i].category.name : 'No Category' %></td>
                            <td>
                                ₹<%= data[i].price %>
                                <% if(data[i].discountPrice && data[i].discountPrice < data[i].price) { %>
                                    <span class="text-success">₹<%= data[i].discountPrice %></span>
                                <% } %>
                            </td>
                            <td><%= data[i].quantity || 0 %></td>
                            <td>
    <% if (!data[i].isBlocked) { %>
        <button class="btn btn-sm btn-danger" 
            onclick="handleBlockUnblock('/admin/blockProduct?id=<%= data[i]._id %>', 'Block')">
            <i class="bi bi-lock-fill"></i> Block
        </button>
    <% } else { %>
        <button class="btn btn-sm btn-success" 
            onclick="handleBlockUnblock('/admin/unblockProduct?id=<%= data[i]._id %>', 'Unblock')">
            <i class="bi bi-unlock-fill"></i> Unblock
        </button>
    <% } %>
</td>

                            <td>
                                <a href="/admin/editProduct?id=<%= data[i]._id %>"
                                   class="btn btn-sm btn-info text-white">
                                   <i class="bi bi-pencil-square"></i> Edit
                                </a>
                            </td>
                        </tr>
                    <% } %>
                <% } else { %>
                    <tr>
                        <td colspan="6" class="text-center">No products found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <% if (totalPages && totalPages > 1) { %>
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center mt-4">
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                    </li>
                <% } %>
            </ul>
        </nav>
    <% } %>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<!-- SweetAlert2 JS -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
  function handleBlockUnblock(url, action) {
    Swal.fire({
        title: `${action} this product?`,
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Yes',
        cancelButtonText: 'No',
    }).then((result) => {
        if (result.isConfirmed) {
            window.location.href = url;
        }
    });
}
</script>

<%- include("../partials/admin/footer") %>
