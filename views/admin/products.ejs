<%- include("../partials/admin/header") %>

<head>
    <meta charset="UTF-8">
    <title>Products</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <style>
        /* Enhanced styling for modern sneaker store admin dashboard */
        :root {
            --primary-dark: #1a1a1a;
            --primary-accent: #ff6b35;
            --secondary-accent: #004e89;
            --success-color: #06a77d;
            --danger-color: #d62828;
            --light-bg: #f8f9fa;
            --card-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            --hover-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .container {
            background: white;
            border-radius: 12px;
            box-shadow: var(--card-shadow);
            padding: 2.5rem;
            margin-top: 2rem;
            margin-bottom: 2rem;
        }

        h2 {
            color: var(--primary-dark);
            font-weight: 700;
            font-size: 2rem;
            letter-spacing: -0.5px;
        }

        /* Search Bar Styling */
        .d-flex {
            gap: 0.5rem;
        }

        .form-control {
            border: 2px solid #e0e0e0;
            padding: 0.75rem 1.25rem;
            font-size: 0.95rem;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: var(--primary-accent);
            box-shadow: 0 0 0 0.2rem rgba(255, 107, 53, 0.15);
            background-color: #fff;
        }

        .form-control::placeholder {
            color: #999;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-accent) 0%, #ff5722 100%);
            border: none;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(255, 107, 53, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 107, 53, 0.4);
            background: linear-gradient(135deg, #ff5722 0%, var(--primary-accent) 100%);
        }

        /* Table Styling */
        .table-responsive {
            border-radius: 8px;
            overflow: hidden;
            margin-top: 2rem;
        }

        .table {
            margin-bottom: 0;
            border-collapse: separate;
            border-spacing: 0;
        }

        .table thead {
            background: linear-gradient(135deg, var(--primary-dark) 0%, #2d2d2d 100%);
            color: white;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
        }

        .table thead th {
            border: none;
            padding: 1.25rem 0.75rem;
            vertical-align: middle;
        }

        .table tbody tr {
            border-bottom: 1px solid #e9ecef;
            transition: all 0.3s ease;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
            box-shadow: inset 0 0 10px rgba(255, 107, 53, 0.05);
            transform: scale(1.01);
        }

        .table tbody td {
            padding: 1.25rem 0.75rem;
            vertical-align: middle;
            color: #333;
            font-size: 0.95rem;
        }

        /* Badge Styling */
        .badge {
            padding: 0.5rem 0.75rem;
            font-size: 0.8rem;
            font-weight: 600;
            border-radius: 6px;
            background: linear-gradient(135deg, var(--secondary-accent) 0%, #0066cc 100%);
            margin: 0.25rem;
            display: inline-block;
        }

        /* Button Styling */
        .btn-sm {
            padding: 0.5rem 0.875rem;
            font-size: 0.85rem;
            font-weight: 600;
            border-radius: 6px;
            transition: all 0.3s ease;
            border: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-danger {
            background: linear-gradient(135deg, var(--danger-color) 0%, #c41e3a 100%);
            color: white;
            box-shadow: 0 4px 10px rgba(214, 40, 40, 0.3);
        }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(214, 40, 40, 0.4);
            background: linear-gradient(135deg, #c41e3a 0%, var(--danger-color) 100%);
            color: white;
        }

        .btn-success {
            background: linear-gradient(135deg, var(--success-color) 0%, #059669 100%);
            color: white;
            box-shadow: 0 4px 10px rgba(6, 168, 125, 0.3);
        }

        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(6, 168, 125, 0.4);
            background: linear-gradient(135deg, #059669 0%, var(--success-color) 100%);
            color: white;
        }

        .btn-info {
            background: linear-gradient(135deg, var(--secondary-accent) 0%, #0066cc 100%);
            color: white;
            box-shadow: 0 4px 10px rgba(0, 78, 137, 0.3);
        }

        .btn-info:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(0, 78, 137, 0.4);
            background: linear-gradient(135deg, #0066cc 0%, var(--secondary-accent) 100%);
            color: white;
        }

        /* Pagination Styling */
        .pagination {
            gap: 0.5rem;
            margin-top: 2rem;
        }

        .page-link {
            border: 2px solid #e0e0e0;
            color: var(--primary-dark);
            font-weight: 600;
            border-radius: 6px;
            transition: all 0.3s ease;
            padding: 0.5rem 0.875rem;
        }

        .page-link:hover {
            background: linear-gradient(135deg, var(--primary-accent) 0%, #ff5722 100%);
            border-color: var(--primary-accent);
            color: white;
            transform: translateY(-2px);
        }

        .page-item.active .page-link {
            background: linear-gradient(135deg, var(--primary-accent) 0%, #ff5722 100%);
            border-color: var(--primary-accent);
            color: white;
            box-shadow: 0 4px 12px rgba(255, 107, 53, 0.3);
        }

        /* Empty State */
        .text-center {
            color: #666;
            font-weight: 500;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .container {
                padding: 1.5rem;
            }

            h2 {
                font-size: 1.5rem;
                margin-bottom: 1.5rem;
            }

            .d-flex {
                flex-direction: column;
            }

            .form-control,
            .btn-primary {
                width: 100%;
            }

            .table-responsive {
                font-size: 0.85rem;
            }

            .btn-sm {
                padding: 0.4rem 0.6rem;
                font-size: 0.75rem;
            }
        }
    </style>
</head>

<body class="bg-light">

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Products</h2>
        <form action="" method="get" class="d-flex" style="max-width: 500px; width: 100%;">
            <input type="text" class="form-control rounded-start-pill" placeholder="Search products"
                name="search" value="<%= searchQuery || '' %>">
            <button class="btn btn-primary rounded-end-pill px-4">Search</button>
        </form>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="text-center">
    <tr>
        <th>Product Name</th>
        <th>Category</th>
        <th>Price</th>
        <th>Total Stock</th>
        <th>Sizes & Stock</th>
        <th>Action</th>
        <th>Edit</th>
    </tr>
</thead>
<tbody>
    <% if (data && data.length > 0) { %>
        <% for (let i = data.length - 1; i >= 0; i--) { %>
            <tr class="text-center">
                <td><%= data[i].productName %></td>
                <td><%= data[i].category ? data[i].category.name : 'No Category' %></td>
                <td>
                    ₹<%= data[i].price %>
                    <% if(data[i].discountPrice && data[i].discountPrice < data[i].price) { %>
                        <span class="text-success">₹<%= data[i].discountPrice %></span>
                    <% } %>
                </td>
            <td>
    <% 
        let totalStock = 0;
        const sizesList = ["6","7","8","9","10"];
        sizesList.forEach(sz => {
            const sizeObj = data[i].sizes.find(s => s.size === sz);
            const stock = sizeObj ? sizeObj.stock : 0;
            totalStock += stock;
        });
    %>
    <%= totalStock %>
</td>
<td>
    <% sizesList.forEach(sz => { 
        const sizeObj = data[i].sizes.find(s => s.size === sz);
    %>
        <span class="badge">
            <%= sz %>: <%= sizeObj ? sizeObj.stock : 0 %>
        </span>
    <% }); %>
</td>

                <td>
                    <% if (!data[i].isBlocked) { %>
                        <button class="btn btn-sm btn-danger" 
                            onclick="handleBlockUnblock('/admin/blockProduct?id=<%= data[i]._id %>', 'Block')">
                            <i class="bi bi-lock-fill"></i> Block
                        </button>
                    <% } else { %>
                        <button class="btn btn-sm btn-success" 
                            onclick="handleBlockUnblock('/admin/unblockProduct?id=<%= data[i]._id %>', 'Unblock')">
                            <i class="bi bi-unlock-fill"></i> Unblock
                        </button>
                    <% } %>
                </td>
                <td>
                    <a href="/admin/editProduct?id=<%= data[i]._id %>"
                       class="btn btn-sm btn-info text-white">
                       <i class="bi bi-pencil-square"></i> Edit
                    </a>
                </td>
            </tr>
        <% } %>
    <% } else { %>
        <tr>
            <td colspan="7" class="text-center">No products found.</td>
        </tr>
    <% } %>
</tbody>

        </table>
    </div>

    <% if (totalPages && totalPages > 1) { %>
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center mt-4">
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                    </li>
                <% } %>
            </ul>
        </nav>
    <% } %>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
  function handleBlockUnblock(url, action) {
    Swal.fire({
        title: `${action} this product?`,
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Yes',
        cancelButtonText: 'No',
    }).then((result) => {
        if (result.isConfirmed) {
            window.location.href = url;
        }
    });
}
</script>

<%- include("../partials/admin/footer") %>
