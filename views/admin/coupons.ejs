<%- include("../partials/admin/header") %>

<head>
  <meta charset="utf-8">
  <title>Zneakz Dashboard - Coupons</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="/admin-assets/css/main.css" rel="stylesheet" type="text/css" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <style>
    body { background-color: #f8f9fa; font-family: 'Inter', sans-serif; }
    .main-wrap { margin-left: 130px; padding: 20px 40px; background-color: #fff; min-height: 100vh; }
    .content-main { margin: 0 auto; padding-left: 10px; max-width: 96%; }
    h3 { font-weight: 700; font-size: 1.8rem; }
    .table th, .table td { text-align: center; vertical-align: middle; }
    .table thead { background: #000; color: #fff; }
    .btn-dark { background-color: #000; border-color: #000; }
    .btn-dark:hover { background-color: #333; }
  </style>
</head>

<body>
  <main class="main-wrap">
    <section class="content-main">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>üéüÔ∏è Coupon Management</h3>
        <button class="btn btn-dark" data-bs-toggle="collapse" data-bs-target="#addCouponForm">+ Add Coupon</button>
      </div>

      <!-- Add Coupon Form -->
      <div class="collapse mb-4" id="addCouponForm">
        <div class="card shadow-sm">
          <div class="card-body">
            <form id="createCouponForm" class="row g-3">
              <div class="col-md-4">
                <label class="form-label">Name</label>
                <input name="name" class="form-control"  />
              </div>
              <div class="col-md-4">
                <label class="form-label">Code</label>
                <input name="code" class="form-control text-uppercase"  />
              </div>
              <div class="col-md-4">
                <label class="form-label">Discount (%)</label>
                <input type="number" name="discountValue" class="form-control"  min="1" max="100" />
              </div>
              <div class="col-md-4">
                <label class="form-label">Min Purchase (‚Çπ)</label>
                <input type="number" name="minPurchase" class="form-control"  min="1" />
              </div>
              <div class="col-md-4">
  <label class="form-label">Max Discount Amount (‚Çπ)</label>
  <input type="number" name="maxAmount" class="form-control" min="1" required />
</div>

              <div class="col-md-4">
                <label class="form-label">Expiry Date</label>
                <input type="date" name="expiryDate" class="form-control"  />
              </div>
              <div class="col-md-12 text-end">
                <button type="submit" class="btn btn-dark px-4">Create Coupon</button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- Coupon Table -->
      <div class="card shadow-sm border-0">
        <div class="card-body">
          <table class="table table-striped align-middle">
            <thead>
              <tr>
                <th>Name</th>
                <th>Code</th>
                <th>Discount (%)</th>
                <th>Min Purchase</th>
                <th>Max Amount</th>
                <th>Expiry</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (coupons.length === 0) { %>
                <tr><td colspan="7" class="text-center text-muted py-4">No coupons created yet.</td></tr>
              <% } else { %>
                <% coupons.forEach(c => { %>
                  <tr>
                    <td><%= c.name %></td>
                    <td><%= c.code %></td>
                    <td><%= c.discountValue %>%</td>
                    <td>‚Çπ<%= c.minPurchase %></td>
                    <td>‚Çπ<%= c.maxAmount %></td>
                    <td><%= new Date(c.expiryDate).toLocaleDateString() %></td>
                    <td>
                     <% if (new Date(c.expiryDate) < new Date()) { %>
   <span class="badge bg-danger">Expired</span>
<% } else if (c.isActive) { %>
   <span class="badge bg-success">Active</span>
<% } else { %>
   <span class="badge bg-secondary">Inactive</span>
<% } %>

                    </td>
                    <td>
                      <div class="d-flex justify-content-center gap-2">
                        <button class="btn btn-sm btn-outline-primary"
                          onclick="openEditModal(
  '<%= c._id %>',
  '<%= c.name %>',
  '<%= c.code %>',
  <%= c.discountValue %>,
  <%= c.minPurchase %>,
  <%= c.maxAmount %>,
  '<%= c.expiryDate.toISOString().split('T')[0] %>'
)">Edit</button>

                        <a href="/admin/coupons/toggle/<%= c._id %>" class="btn btn-sm btn-outline-dark">
                          <%= c.isActive ? 'Deactivate' : 'Activate' %>
                        </a>

                        <a href="/admin/coupons/delete/<%= c._id %>"
                           class="btn btn-sm btn-outline-danger"
                           onclick="return confirmDelete(event, '<%= c.code %>')">Delete</a>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </section>
  </main>

  <!-- Edit Modal -->
  <div class="modal fade" id="editCouponModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content border-0 shadow-sm">
        <div class="modal-header bg-dark text-white">
          <h5 class="modal-title">Edit Coupon</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="editCouponForm">
            <input type="hidden" id="editCouponId" />
            <div class="mb-3"><label class="form-label">Name</label><input type="text" id="editName" class="form-control"  /></div>
            <div class="mb-3"><label class="form-label">Code</label><input type="text" id="editCode" class="form-control text-uppercase"  /></div>
            <div class="mb-3"><label class="form-label">Discount (%)</label><input type="number" id="editDiscount" class="form-control" min="1" max="100"  /></div>
            <div class="mb-3"><label class="form-label">Min Purchase (‚Çπ)</label><input type="number" id="editMinPurchase" class="form-control"  /></div>
            <div class="mb-3">
  <label class="form-label">Max Discount Amount (‚Çπ)</label>
  <input type="number" id="editMaxAmount" class="form-control" min="1" />
</div>

            <div class="mb-3"><label class="form-label">Expiry Date</label><input type="date" id="editExpiry" class="form-control"  /></div>
            <div class="text-end"><button type="submit" class="btn btn-dark px-4">Save Changes</button></div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      window.confirmDelete = function (e, code) {
        e.preventDefault();
        const url = e.currentTarget.href;
        Swal.fire({
          title: 'Delete Coupon?',
          text: `Are you sure you want to delete "${code}"?`,
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#000',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Yes, Delete',
          cancelButtonText: 'Cancel'
        }).then((result) => {
          if (result.isConfirmed) window.location.href = url;
        });
      };

      const createForm = document.getElementById("createCouponForm");
      createForm?.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = Object.fromEntries(new FormData(createForm).entries());
        formData.code = formData.code.trim().toUpperCase();
        formData.name = formData.name.trim();

        const expiry = new Date(formData.expiryDate);
        const today = new Date();
        today.setHours(0, 0, 0, 0);
        if (expiry < today) return Swal.fire("Error", "Expiry date cannot be in the past", "error");
        if (formData.discountValue > 80 || formData.discountValue < 1)
  return Swal.fire("Error", "Discount must be between 1% and 80%", "error");

        try {
          const res = await fetch("/admin/coupons/create", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(formData)
          });
          const result = await res.json();
          if (result.success) {
            Swal.fire({ toast: true, icon: "success", title: result.message, position: "top-end", timer: 1500, showConfirmButton: false });
            setTimeout(() => location.reload(), 1500);
          } else Swal.fire("Error", result.message || "Failed to create coupon", "error");
        } catch {
          Swal.fire("Error", "Server error while creating coupon", "error");
        }
      });

      const modalElement = document.getElementById("editCouponModal");
      const editModal = new bootstrap.Modal(modalElement);

    window.openEditModal = (id, name, code, discount, minPurchase, maxAmount, expiryDate) => {
  document.getElementById("editCouponId").value = id;
  document.getElementById("editName").value = name;
  document.getElementById("editCode").value = code;
  document.getElementById("editDiscount").value = discount;
  document.getElementById("editMinPurchase").value = minPurchase;
  document.getElementById("editMaxAmount").value = maxAmount;
  document.getElementById("editExpiry").value = expiryDate;
  editModal.show();
};


      document.getElementById("editCouponForm").addEventListener("submit", async (e) => {
        e.preventDefault();
        const id = document.getElementById("editCouponId").value;
       const data = {
  name: document.getElementById("editName").value.trim(),
  code: document.getElementById("editCode").value.trim().toUpperCase(),
  discountValue: parseFloat(document.getElementById("editDiscount").value),
  minPurchase: parseFloat(document.getElementById("editMinPurchase").value),
  maxAmount: parseFloat(document.getElementById("editMaxAmount").value),
  expiryDate: document.getElementById("editExpiry").value
};


        const expiry = new Date(data.expiryDate);
        const today = new Date();
        today.setHours(0, 0, 0, 0);
        if (expiry < today) return Swal.fire("Error", "Expiry date cannot be in the past", "error");
   if (data.discountValue > 80 || data.discountValue < 1) {
  Swal.fire("Error", "Discount must be between 1% and 80%", "error");
  return;
}


        try {
          const res = await fetch(`/admin/coupons/edit/${id}`, {
            method: "PUT",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(data)
          });
          const result = await res.json();
          if (result.success) {
            Swal.fire({ toast: true, position: "top-end", icon: "success", title: "Coupon updated", timer: 1500, showConfirmButton: false });
            setTimeout(() => location.reload(), 1500);
          } else Swal.fire("Error", result.message || "Update failed", "error");
        } catch {
          Swal.fire("Error", "Server error while updating coupon", "error");
        }
        editModal.hide();
      });
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
