      color: #333;
      transition: color 0.3s;
    }

    .nav-right a:hover i {
      color: #666;
    }

    @media (max-width: 768px) {
      .nav-container {
        flex-direction: column;
        gap: 10px;
      }

      .nav-left, .nav-center, .nav-right {
        justify-content: center;
      }

      .nav-left-links, .nav-center ul {
        flex-wrap: wrap;
