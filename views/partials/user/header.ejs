  <!-- Clear button -->
  <% if (typeof query !== 'undefined' && query.trim() !== '') { %>
    <a href="/" class="btn btn-outline-secondary ms-2 rounded-circle d-flex align-items-center justify-content-center"
       style="width: 38px; height: 38px;">
      <i class="bi bi-x-lg"></i>
    </a>
